{# =========================================================
  Tharaa | Banners Slider (Home Component)
  - Compatible with twilight.json:
    full_width, rounded, autoplay, show_arrows, banners[], custom_class
  - banners fields (collection):
    banners.image, banners.mobile_image, banners.url
  - Fix: arrows click issue using controls-outer (official)
========================================================= #}

{% set full_width   = component.full_width ?? true %}
{% set rounded      = component.rounded ?? true %}
{% set autoplay     = component.autoplay ?? true %}
{% set show_arrows  = component.show_arrows ?? true %}
{% set custom_class = component.custom_class ?? '' %}
{% set banners      = component.banners ?? [] %}

{% if banners|length > 0 %}
	{% set multiple = banners|length > 1 %}

	{# Swiper config via slider-config #}
	{% set sliderConfig = {
    "slidesPerView": 1,
    "spaceBetween": 0,
    "centeredSlides": false,
    "watchOverflow": true,
    "loop": multiple,
    "autoplay": (autoplay and multiple) ? {"delay": 3500, "disableOnInteraction": false} : false
  } %}

	<section class="s-block tharaa-banners-slider {{ custom_class }}{{ full_width ? ' is-fullwidth' : '' }}{{ rounded ? ' is-rounded' : '' }}">
		<div class="tharaa-banners-slider__wrap{{ full_width ? ' tharaa-banners-slider__wrap--full' : ' container' }}">

			<salla-slider class="tharaa-banners-slider__slider" type="carousel" slides-per-view="1" show-controls="{{ (show_arrows and multiple) ? 'true' : 'false' }}" {% if show_arrows and multiple %} controls-outer arrows-centered {% endif %} auto-play="{{ (autoplay and multiple) ? 'true' : 'false' }}" loop="{{ multiple ? 'true' : 'false' }}" slider-config='{{ sliderConfig|json_encode|e("html_attr") }}'>
				{% set rendered = 0 %}

				{% for banner in banners %}
					{# ✅ IMPORTANT: your twilight.json uses dotted keys #}
					{% set img_desktop = banner['banners.image'] ?? banner.image ?? null %}
					{% set img_mobile  = banner['banners.mobile_image'] ?? banner.mobile_image ?? null %}
					{% set url         = banner['banners.url'] ?? banner.url ?? '' %}

					{# normalize if image is object {url/original} #}
					{% if img_desktop and img_desktop.url is defined %}
						{% set img_desktop = img_desktop.url %}
					{% endif %}
					{% if img_desktop and img_desktop.original is defined %}
						{% set img_desktop = img_desktop.original %}
					{% endif %}

					{% if img_mobile and img_mobile.url is defined %}
						{% set img_mobile = img_mobile.url %}
					{% endif %}
					{% if img_mobile and img_mobile.original is defined %}
						{% set img_mobile = img_mobile.original %}
					{% endif %}

					{% if img_desktop %}
						{% set rendered = rendered + 1 %}

						<div class="tharaa-banners-slider__slide" slot="items">
							{% if url %}
								<a class="tharaa-banners-slider__link" href="{{ url }}" aria-label="عرض البنر">
								{% else %}
									<div class="tharaa-banners-slider__link" aria-label="عرض البنر">
									{% endif %}

									<picture class="tharaa-banners-slider__media{% if img_mobile %} has-mobile{% endif %}">
										{% if img_mobile %}
											<source media="(max-width: 768px)" srcset="{{ img_mobile }}">
										{% endif %}
										<img class="tharaa-banners-slider__img" src="{{ img_desktop }}" alt="" loading="{{ loop.first ? 'eager' : 'lazy' }}" decoding="async" fetchpriority="{{ loop.first ? 'high' : 'auto' }}">
									</picture>

									{% if url %}
									</a>
							{% else %}
								</div>
							{% endif %}
						</div>
					{% endif %}
				{% endfor %}

				{% if rendered == 0 %}
					<div slot="items" class="tharaa-banners-slider__empty">
						لا توجد بنرات صالحة للعرض — تأكد من رفع صورة البنر.
					</div>
				{% endif %}
			</salla-slider>

		</div>
	</section>
{% endif %}
