{# =========================================================
  Tharaa | Banners Slider (Home Component)
  - Compatible with your twilight.json:
    full_width, rounded, autoplay, show_arrows, banners[], custom_class
  - Force 1 banner per view (like competitor)
  - Uses official <salla-slider> web component
========================================================= #}

{% set full_width   = component.full_width ?? true %}
{% set rounded      = component.rounded ?? true %}
{% set autoplay     = component.autoplay ?? true %}
{% set show_arrows  = component.show_arrows ?? true %}
{% set custom_class = component.custom_class ?? '' %}
{% set banners      = component.banners ?? [] %}

{% if banners|length > 0 %}
  {% set multiple_banners = banners|length > 1 %}

  {# Force one slide per view + zero gap #}
  {% set sliderConfig = {
    "slidesPerView": 1,
    "spaceBetween": 0,
    "centeredSlides": false,
    "loop": multiple_banners,
    "watchOverflow": true,
    "autoplay": (autoplay and multiple_banners) ? {"delay": 3500, "disableOnInteraction": false} : false
  } %}

  <section class="tharaa-banners-slider {{ custom_class }} {{ full_width ? 'is-fullwidth' : '' }} {{ rounded ? 'is-rounded' : '' }}">
    <div class="{{ full_width ? 'tharaa-banners-slider__wrap tharaa-banners-slider__wrap--full' : 'tharaa-banners-slider__wrap container' }}">

      <salla-slider
        class="tharaa-banners-slider__slider"
        type="carousel"
        slider-config='{{ sliderConfig|json_encode|e("html_attr") }}'
        {% if show_arrows and multiple_banners %}show-controls{% endif %}
        {% if autoplay and multiple_banners %} auto-play{% endif %}
      >
        {% for banner in banners %}

          {# Normal keys expected from collection item #}
          {% set img_desktop = banner.image ?? null %}
          {% set img_mobile  = banner.mobile_image ?? null %}
          {% set url         = banner.url ?? null %}

          {# Fallback if keys were saved with prefix "banners." (rare) #}
          {% if not img_desktop and banner['banners.image'] is defined %}
            {% set img_desktop = banner['banners.image'] %}
          {% endif %}
          {% if not img_mobile and banner['banners.mobile_image'] is defined %}
            {% set img_mobile = banner['banners.mobile_image'] %}
          {% endif %}
          {% if not url and banner['banners.url'] is defined %}
            {% set url = banner['banners.url'] %}
          {% endif %}

          {# Required fields: desktop image + url #}
          {% if img_desktop and url %}
            <div class="tharaa-banners-slider__slide">
              <a class="tharaa-banners-slider__link" href="{{ url }}" aria-label="عرض البنر">
                <picture class="tharaa-banners-slider__media{% if img_mobile %} has-mobile{% endif %}">
                  {% if img_mobile %}
                    <source media="(max-width: 768px)" srcset="{{ img_mobile }}">
                  {% endif %}

                  <img
                    class="tharaa-banners-slider__img"
                    src="{{ img_desktop }}"
                    alt=""
                    width="1300"
                    height="300"
                    loading="{{ loop.first ? 'eager' : 'lazy' }}"
                    decoding="async"
                    fetchpriority="{{ loop.first ? 'high' : 'auto' }}"
                  >
                </picture>
              </a>
            </div>
          {% endif %}

        {% endfor %}
      </salla-slider>

    </div>
  </section>

{% endif %}
