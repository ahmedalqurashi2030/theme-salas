{# featured-products.twig #}
<section class="s-block s-block--features-products {% if items | length > 1 %}two-cols{% endif %} container">
    <div class="inner">
        {% for section in items %}
            <div>
                <div class="s-block__title">
                  <h2>{{ section.title }}</h2>
                </div> 
                <div class="flex-1 grid lg:grid-cols-2 gap-4 sm:gap-8">
                    {% if section.featured_product %}
                        {# â­ Ù…Ù†ØªØ¬ Ù…Ù…ÙŠØ² Ø¨ØµÙˆØ±Ø© ÙƒØ§Ù…Ù„Ø© #}
                        <salla-product-card 
                            product="{{section.featured_product}}" 
                            fullImage 
                            shadow-on-hover>
                        </salla-product-card>
                        
                        <div class="grid gap-4 sm:gap-8">
                            {% for product in section.products|slice(0,3) %}
                                {# ğŸ“¦ Ù…Ù†ØªØ¬Ø§Øª Ù…ØµØºØ±Ø© #}
                                <salla-product-card 
                                    product="{{product}}" 
                                    minimal 
                                    shadow-on-hover>
                                </salla-product-card>
                            {% endfor %}
                        </div>
                    {% else %}
                        {% for product in section.products %}
                            <salla-product-card 
                                product="{{product}}" 
                                minimal 
                                shadow-on-hover>
                            </salla-product-card>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</section>