{# مثال: استبدال طريقة عرض المنتجات لتستخدم thraa-product-card #}
<div class="tabs-wrapper flex flex-1">
	{% for section in items %}
	  <div id="{{ component_id }}-{{ section.id }}" class="tabs__item grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4 {{ loop.first ? 'is-active' : '' }}">
		{% for product in section.products|slice(0, main_product ? 4 : 8) %}
		  {# تمرير المنتج كـ JSON للعنصر #}
		  <thraa-product-card product="{{ product|json_encode | e('html_attr') }}"></thraa-product-card>
		{% endfor %}
	  </div>
	{% endfor %}
  </div>