{# ================================================
  Tharaa Theme – Before / After Hero Section
  Path: home.before-after-hero.twig
  Compatible with: Salla Partner Platform
  Author: صخر – ثيم ثراء
================================================ #}

{% set bg_color = component.bg_color ?? '#ffffff' %}
{% set title = component.title ?? '' %}
{% set eyebrow = component.subtitle ?? '' %}
{% set description = component.description ?? '' %}
{% set button_text = component.button_text ?? '' %}
{% set button_link = component.button_link ?? '' %}
{% set items = component.comparison_items ?? [] %}

<section class="th-before-after-hero s-block container"
         style="background-color: {{ bg_color }};">
    <div class="th-before-after-hero__inner">
        <div class="th-before-after-hero__content">
            {% if eyebrow %}
                <span class="th-before-after-hero__eyebrow">{{ eyebrow }}</span>
            {% endif %}

            {% if title %}
                <h2 class="th-before-after-hero__title">{{ title }}</h2>
            {% endif %}

            {% if description %}
                <p class="th-before-after-hero__desc">{{ description|raw }}</p>
            {% endif %}

            {% if button_text and button_link %}
                <a href="{{ button_link }}" class="th-before-after-hero__btn s-button s-button--primary">
                    {{ button_text }}
                </a>
            {% endif %}
        </div>

        {# قسم الصور: قبل / بعد #}
        {% if items|length > 0 %}
            <div class="th-before-after-hero__images">
                {% for item in items %}
                    <div class="th-before-after-hero__image-pair">
                        <div class="th-before-after-hero__image th-before-after-hero__image--before">
                            <img src="{{ item.before_image }}" alt="{{ item.before_label ?? 'قبل' }}">
                            {% if item.before_label %}
                                <span class="th-before-after-hero__label th-before-after-hero__label--before">
                                    {{ item.before_label }}
                                </span>
                            {% endif %}
                        </div>

                        <div class="th-before-after-hero__image th-before-after-hero__image--after">
                            <img src="{{ item.after_image }}" alt="{{ item.after_label ?? 'بعد' }}">
                            {% if item.after_label %}
                                <span class="th-before-after-hero__label th-before-after-hero__label--after">
                                    {{ item.after_label }}
                                </span>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>

