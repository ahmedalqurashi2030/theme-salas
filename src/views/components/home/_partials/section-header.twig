{#
  Shared section header for home components
  Inputs:
  - section_title (string)
  - section_subtitle (string)
  - alignment ('start'|'center')
  - btn_text (string)
  - btn_url (string)
#}
{% set has_action = btn_text and btn_url %}
{% set is_center = alignment == 'center' %}

<div class="s-block__title th-links-header {{ is_center ? 'th-links-header--center' : '' }}">
	<div class="right-side th-links-header__main">
		{% if not is_center %}
			<span class="th-links-header__side-bar" aria-hidden="true"></span>
		{% endif %}

		<div class="th-links-header__content">
			<div class="th-links-header__title-row">
				{% if is_center %}
					<span class="th-links-header__line" aria-hidden="true"></span>
				{% endif %}

				<h2 class="th-links-header__title-head">{{ section_title }}</h2>

				{% if is_center %}
					<span class="th-links-header__line" aria-hidden="true"></span>
				{% endif %}
			</div>

			{% if section_subtitle %}
				<p class="th-links-header__title-sub">{{ section_subtitle }}</p>
			{% endif %}
		</div>
	</div>

	{% if has_action %}
		<a href="{{ btn_url }}" class="s-block__display-all th-links-header__action" aria-label="{{ btn_text }}">
			<span>{{ btn_text }}</span>
			<i class="sicon-arrow-left" aria-hidden="true"></i>
		</a>
	{% endif %}
</div>
