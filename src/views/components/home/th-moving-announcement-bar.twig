{#
| Variable                    | Type    | Description
|-----------------------------|---------|-------------------------------------------
| component.announcement_text | string  | Moving announcement text
| component.announcement_link | string  | Optional link for the announcement
| component.bg_color          | string  | Background color
| component.text_color        | string  | Text color
| component.sticky_on_scroll  | boolean | Keep the bar sticky while scrolling
| component.dismissible       | boolean | Allow customer to dismiss announcement
| component.custom_class      | string  | Extra custom class from theme settings
#}

{% set source = component|default(section.settings|default({})) %}
{% set announcement_text = source.announcement_text|default('تخفيضات الصيف خصم 30%')|trim %}
{% set announcement_link = source.announcement_link|default('')|trim %}
{% set bg_color = source.bg_color|default('#000000') %}
{% set text_color = source.text_color|default('#ffffff') %}
{% set sticky_on_scroll = source.sticky_on_scroll|default(false) %}
{% set dismissible = source.dismissible|default(false) %}
{% set custom_class = source.custom_class|default('')|trim %}
{% set section_id = 'th-moving-announcement-bar-' ~ section.id %}

{% if announcement_text %}
  <section
    id="{{ section_id }}"
    class="th-moving-announcement-bar s-block {{ sticky_on_scroll ? 'is-sticky' : '' }} {{ custom_class }}"
    data-dismissible="{{ dismissible ? '1' : '0' }}"
    aria-label="شريط إعلاني متحرك"
    style="--th-announcement-bg: {{ bg_color }}; --th-announcement-color: {{ text_color }};">

    <div class="th-moving-announcement-bar__viewport" aria-live="polite">
      <div class="th-moving-announcement-bar__track" role="presentation">
        {% for i in 1..8 %}
          {% if announcement_link %}
            <a href="{{ announcement_link }}" class="th-moving-announcement-bar__item" aria-label="{{ announcement_text }}">
              <i class="sicon-megaphone th-moving-announcement-bar__icon" aria-hidden="true"></i>
              <span>{{ announcement_text }}</span>
            </a>
          {% else %}
            <span class="th-moving-announcement-bar__item">
              <i class="sicon-megaphone th-moving-announcement-bar__icon" aria-hidden="true"></i>
              <span>{{ announcement_text }}</span>
            </span>
          {% endif %}
        {% endfor %}
      </div>

      {% if dismissible %}
        <button type="button" class="th-moving-announcement-bar__close" data-th-announcement-close aria-label="إغلاق الإعلان">
          <span aria-hidden="true">×</span>
        </button>
      {% endif %}
    </div>

    <style>
      #{{ section_id }} {
        background: var(--th-announcement-bg);
        color: var(--th-announcement-color);
        border-bottom: 1px solid rgba(255, 255, 255, .2);
        min-height: 42px;
        display: flex;
        align-items: center;
      }

      #{{ section_id }}.is-sticky {
        position: sticky;
        top: 0;
        z-index: 45;
      }

      #{{ section_id }} .th-moving-announcement-bar__viewport {
        width: 100%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 42px;
        position: relative;
      }

      #{{ section_id }} .th-moving-announcement-bar__track {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2.5rem;
        white-space: nowrap;
        min-width: max-content;
        margin-inline: auto;
        padding-inline: 1rem;
        animation: th-moving-announcement-{{ section.id }} 26s linear infinite;
        will-change: transform;
      }

      #{{ section_id }}:hover .th-moving-announcement-bar__track {
        animation-play-state: paused;
      }

      #{{ section_id }} .th-moving-announcement-bar__item {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: .5rem;
        color: inherit;
        font-size: .9rem;
        font-weight: 600;
        line-height: 1.4;
        min-height: 42px;
        text-decoration: none;
      }

      #{{ section_id }} .th-moving-announcement-bar__item:focus-visible {
        outline: 2px solid currentColor;
        outline-offset: 2px;
      }

      #{{ section_id }} .th-moving-announcement-bar__icon {
        font-size: .9rem;
        opacity: .9;
      }

      #{{ section_id }} .th-moving-announcement-bar__close {
        position: absolute;
        inset-inline-end: .35rem;
        top: 50%;
        transform: translateY(-50%);
        width: 30px;
        height: 30px;
        border: 0;
        border-radius: 999px;
        background: rgba(255, 255, 255, .14);
        color: inherit;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        line-height: 1;
        cursor: pointer;
      }

      #{{ section_id }} .th-moving-announcement-bar__close:hover {
        background: rgba(255, 255, 255, .22);
      }

      #{{ section_id }} .th-moving-announcement-bar__close:focus-visible {
        outline: 2px solid currentColor;
        outline-offset: 2px;
      }

      @keyframes th-moving-announcement-{{ section.id }} {
        from { transform: translateX(0); }
        to { transform: translateX(50%); }
      }

      [dir="ltr"] #{{ section_id }} .th-moving-announcement-bar__track {
        animation-name: th-moving-announcement-ltr-{{ section.id }};
      }

      @keyframes th-moving-announcement-ltr-{{ section.id }} {
        from { transform: translateX(0); }
        to { transform: translateX(-50%); }
      }

      @media (prefers-reduced-motion: reduce) {
        #{{ section_id }} .th-moving-announcement-bar__track {
          animation: none;
          justify-content: center;
          flex-wrap: wrap;
          row-gap: .6rem;
          padding-block: .6rem;
          white-space: normal;
        }
      }
    </style>

    {% if dismissible %}
      <script>
        (function () {
          var root = document.getElementById('{{ section_id }}');
          if (!root) return;

          var key = 'th-announcement-dismissed-{{ section.id }}';

          try {
            if (window.localStorage && localStorage.getItem(key) === '1') {
              root.remove();
              return;
            }
          } catch (e) {}

          var closeButton = root.querySelector('[data-th-announcement-close]');
          if (!closeButton) return;

          closeButton.addEventListener('click', function () {
            root.remove();
            try {
              if (window.localStorage) {
                localStorage.setItem(key, '1');
              }
            } catch (e) {}
          });
        })();
      </script>
    {% endif %}
  </section>
{% endif %}
