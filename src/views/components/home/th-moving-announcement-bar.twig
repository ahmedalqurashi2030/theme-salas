{#
| Variable                 | Type    | Description
|--------------------------|---------|-------------------------------------------
| component.announcement_text | string | Moving announcement text
| component.announcement_link | string | Optional link for the announcement
| component.bg_color          | string | Background color
| component.text_color        | string | Text color
| component.custom_class      | string | Extra custom class from theme settings
#}

{% set source = component|default(section.settings|default({})) %}
{% set announcement_text = source.announcement_text|default('تخفيضات الصيف خصم 30%')|trim %}
{% set announcement_link = source.announcement_link|default('')|trim %}
{% set bg_color = source.bg_color|default('#000000') %}
{% set text_color = source.text_color|default('#ffffff') %}
{% set custom_class = source.custom_class|default('')|trim %}
{% set section_id = 'th-moving-announcement-bar-' ~ section.id %}

{% if announcement_text %}
  <section
    id="{{ section_id }}"
    class="th-moving-announcement-bar s-block {{ custom_class }}"
    aria-label="شريط إعلاني متحرك"
    style="--th-announcement-bg: {{ bg_color }}; --th-announcement-color: {{ text_color }};">

    <div class="th-moving-announcement-bar__viewport" aria-live="polite">
      <div class="th-moving-announcement-bar__track" role="presentation">
        {% for i in 1..8 %}
          {% if announcement_link %}
            <a href="{{ announcement_link }}" class="th-moving-announcement-bar__item" aria-label="{{ announcement_text }}">
              <i class="sicon-megaphone th-moving-announcement-bar__icon" aria-hidden="true"></i>
              <span>{{ announcement_text }}</span>
            </a>
          {% else %}
            <span class="th-moving-announcement-bar__item">
              <i class="sicon-megaphone th-moving-announcement-bar__icon" aria-hidden="true"></i>
              <span>{{ announcement_text }}</span>
            </span>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <style>
      #{{ section_id }} {
        background: var(--th-announcement-bg);
        color: var(--th-announcement-color);
        border-bottom: 1px solid rgba(255, 255, 255, .2);
        min-height: 42px;
        display: flex;
        align-items: center;
      }

      #{{ section_id }} .th-moving-announcement-bar__viewport {
        width: 100%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 42px;
      }

      #{{ section_id }} .th-moving-announcement-bar__track {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2.5rem;
        white-space: nowrap;
        min-width: max-content;
        margin-inline: auto;
        padding-inline: 1rem;
        animation: th-moving-announcement-{{ section.id }} 26s linear infinite;
        will-change: transform;
      }

      #{{ section_id }}:hover .th-moving-announcement-bar__track {
        animation-play-state: paused;
      }

      #{{ section_id }} .th-moving-announcement-bar__item {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: .5rem;
        color: inherit;
        font-size: .9rem;
        font-weight: 600;
        line-height: 1.4;
        min-height: 42px;
        text-decoration: none;
      }

      #{{ section_id }} .th-moving-announcement-bar__item:focus-visible {
        outline: 2px solid currentColor;
        outline-offset: 2px;
      }

      #{{ section_id }} .th-moving-announcement-bar__icon {
        font-size: .9rem;
        opacity: .9;
      }

      @keyframes th-moving-announcement-{{ section.id }} {
        from { transform: translateX(0); }
        to { transform: translateX(50%); }
      }

      [dir="ltr"] #{{ section_id }} .th-moving-announcement-bar__track {
        animation-name: th-moving-announcement-ltr-{{ section.id }};
      }

      @keyframes th-moving-announcement-ltr-{{ section.id }} {
        from { transform: translateX(0); }
        to { transform: translateX(-50%); }
      }

      @media (prefers-reduced-motion: reduce) {
        #{{ section_id }} .th-moving-announcement-bar__track {
          animation: none;
          justify-content: center;
          flex-wrap: wrap;
          row-gap: .6rem;
          padding-block: .6rem;
          white-space: normal;
        }
      }
    </style>
  </section>
{% endif %}

