<!-- قسم عروض آبل (ثيم ثراء) -->
<section class="s-block th-hero-promo ">
    <div class="container">
        
        <!-- البطاقة الرئيسية العائمة -->
        <div class="th-hero-promo__card">
            
            <!-- خلفية الديكور المشعة -->
            <div class="th-hero-promo__glow-decoration" aria-hidden="true"></div>

            <!-- الجزء العلوي: النصوص والصورة -->
            <header class="th-hero-promo__header">
                
                <!-- 1. المحتوى النصي -->
                <div class="th-hero-promo__content">
                    <span class="th-hero-promo__badge">تصفية نهاية العام</span>
                    
                    <h2 class="th-hero-promo__title">
                        عروض آبل الخارقة <br>وصلت الآن.
                    </h2>
                    
                    <p class="th-hero-promo__subtitle">
                        احصل على خصومات فورية تصل إلى 20% عند شراء أجهزة Mac و iPad و iPhone المختارة لفترة محدودة.
                    </p>
                    
                    <!-- العداد التنازلي -->
                    <div class="th-timer">
                        <div class="th-timer__item">
                            <span class="th-timer__value" id="th-ss">45</span>
                            <span class="th-timer__label">ثانية</span>
                        </div>
                        <div class="th-timer__item">
                            <span class="th-timer__value" id="th-mm">12</span>
                            <span class="th-timer__label">دقيقة</span>
                        </div>
                        <div class="th-timer__item">
                            <span class="th-timer__value" id="th-hh">05</span>
                            <span class="th-timer__label">ساعة</span>
                        </div>
                        <div class="th-timer__item">
                            <span class="th-timer__value" id="th-dd">02</span>
                            <span class="th-timer__label">يوم</span>
                        </div>
                    </div>

                    <a href="#" class="th-hero-promo__btn">
                        <span>تصفح المجموعة</span>
                        <i class="fa-solid fa-arrow-left"></i>
                    </a>
                </div>

                <!-- 2. الصورة الرئيسية (30%) -->
                <figure class="th-hero-promo__visual">
                    <img src="https://i.ibb.co/68v8zN6/Apple-Set-Transparent.png" 
                         alt="مجموعة منتجات آبل" 
                         class="th-hero-promo__image">
                </figure>
            </header>

            <!-- الجزء السفلي: شريط المنتجات -->
            <div class="th-hero-promo__footer">
                <h3 class="th-hero-promo__section-label">الأكثر طلباً هذا الأسبوع</h3>
                
                <div class="th-promo-products" id="thPromoProductsContainer">
                    
                    <!-- تكرار كارت المنتج -->
                    {% for i in 1..5 %} 
                    <!-- (مثال للحلقة التكرارية في سلة) -->
                    <article class="th-product-mini">
                        <div class="th-product-mini__visual">
                            <!-- صور توضيحية -->
                            {% if i == 1 %}<img src="https://assets.stickpng.com/images/580b57fcd9996e24bc43c51f.png" alt="Product" class="th-product-mini__img">{% endif %}
                            {% if i == 2 %}<img src="https://pngimg.com/d/apple_watch_PNG108990.png" alt="Product" class="th-product-mini__img">{% endif %}
                            {% if i == 3 %}<img src="https://pngimg.com/d/macbook_PNG6.png" alt="Product" class="th-product-mini__img">{% endif %}
                            {% if i == 4 %}<img src="https://assets.stickpng.com/images/635a6b0c239d42f83c072e94.png" alt="Product" class="th-product-mini__img">{% endif %}
                            {% if i == 5 %}<img src="https://purepng.com/public/uploads/large/purepng.com-imac-screen-215appleimac215-inch-screen-215-inchdesktoppccomputermonitor-17015283489280x60m.png" alt="Product" class="th-product-mini__img">{% endif %}
                        </div>
                        
                        <div class="th-product-mini__details">
                            <h4 class="th-product-mini__title">
                                {% if i == 1 %}iPad Mini 6{% elseif i == 2 %}Watch Ultra{% elseif i == 3 %}MacBook Air{% elseif i == 4 %}iPhone 14 Plus{% else %}iMac 24{% endif %}
                            </h4>
                            <div class="th-product-mini__price">2,499 ر.س</div>
                        </div>
                        
                        <button class="th-product-mini__add-btn" aria-label="أضف للسلة">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </article>
                    {% endfor %}

                </div>

                <!-- شريط التمرير (للجوال فقط) -->
                <div class="th-promo-products__scroll-indicator">
                    <div class="th-promo-products__scroll-thumb" id="thScrollThumb"></div>
                </div>
            </div>

        </div>
    </div>
</section>




<style>
    /* --- Variables Scope for Tharaa Theme Identity --- */
.th-hero-promo {
  --th-color-primary: #0071e3;
  --th-color-dark: #1d1d1f;
  --th-color-text-sub: #555555;
  --th-bg-gradient-main: linear-gradient(90deg, #feeef1 0%, #eef8ff 100%);
  --th-bg-glass: rgba(255, 255, 255, 0.65);
  --th-bg-glass-card: rgba(255, 255, 255, 0.55);
  --th-radius-xl: 32px;
  --th-radius-md: 20px;
  --th-radius-sm: 16px;
  --th-space-container: 40px; /* موبايل */
  --th-shadow-soft: 0 20px 60px rgba(0, 0, 0, 0.06);

  /* تباعد داخلي للحاوية من الأعلى والأسفل */
  padding: 50px 0;
  overflow: hidden;

  /* --- Elements --- */
  &__card {
    position: relative;
    width: 100%;
    background: var(--th-bg-gradient-main);
    border-radius: var(--th-radius-xl);
    padding: var(--th-space-container) 20px;
    box-shadow: var(--th-shadow-soft);
    display: flex;
    flex-direction: column;
    gap: 40px;
    isolation: isolate; /* Create new stacking context */

    @media (min-width: 992px) {
      padding: 60px;
      gap: 60px;
    }
  }

  &__glow-decoration {
    position: absolute;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.5) 0%, transparent 70%);
    top: -10%;
    left: 50%;
    transform: translateX(-50%);
    z-index: -1;
    pointer-events: none;
  }

  /* --- Header Area (Text + Main Image) --- */
  &__header {
    display: flex;
    flex-direction: column-reverse; /* موبايل: النص تحت الصورة أو فوقها حسب التصميم المطلوب، هنا نعكس للترتيب البصري */
    gap: 30px;
    position: relative;
    text-align: center;

    @media (min-width: 992px) {
      flex-direction: row; /* ديسكتوب: صف */
      text-align: right;   /* عودة للوضع الطبيعي في RTL */
      justify-content: space-between;
      align-items: center;
    }
  }

  /* 1. Text Content */
  &__content {
    width: 100%;
    flex: 1; /* يأخذ باقي المساحة في الديسكتوب */
  }

  &__badge {
    display: inline-block;
    background: rgba(0, 113, 227, 0.1);
    color: var(--th-color-primary);
    padding: 6px 16px;
    border-radius: 30px;
    font-weight: 700;
    font-size: 13px;
    margin-bottom: 15px;
    border: 1px solid rgba(0, 113, 227, 0.15);
  }

  &__title {
    font-size: 28px;
    font-weight: 900;
    line-height: 1.2;
    margin-bottom: 15px;
    color: var(--th-color-dark);

    @media (min-width: 768px) {
      font-size: 36px;
    }
    
    @media (min-width: 992px) {
      font-size: 44px;
    }
  }

  &__subtitle {
    font-size: 16px;
    color: var(--th-color-text-sub);
    line-height: 1.6;
    margin-bottom: 30px;
    margin-inline: auto; /* Center in mobile */
    max-width: 90%;

    @media (min-width: 992px) {
      font-size: 18px;
      margin-inline: 0; /* Align start in desktop */
    }
  }

  /* 2. Button */
  &__btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background-color: var(--th-color-dark);
    color: #fff;
    padding: 14px 35px;
    border-radius: 50px;
    text-decoration: none;
    font-size: 16px;
    font-weight: 700;
    transition: all 0.3s ease;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    margin-top: 10px;

    &:hover {
      background-color: var(--th-color-primary);
      transform: translateY(-3px);
      color: #fff;
    }
  }

  /* 3. Main Visual Image (The 30% Logic) */
  &__visual {
    width: 100%;
    max-width: 280px; /* تحجيم للموبايل */
    margin: 0 auto;
    position: relative;
    padding: 0; /* Reset generic figure padding */
    margin: 0; /* Reset generic figure margin */

    /* Desktop: 30% Constraint */
    @media (min-width: 992px) {
      flex: 0 0 30%; 
      max-width: 30%;
      display: flex;
      justify-content: flex-end; /* لضمان المحاذاة */
    }
  }

  &__image {
    width: 100%;
    height: auto;
    display: block;
    filter: drop-shadow(0 25px 50px rgba(0, 0, 0, 0.15));
    animation: th-float 6s ease-in-out infinite;

    /* موبايل */
    max-width: 80%;
    margin: 0 auto;

    @media (min-width: 992px) {
      max-width: 100%;
      margin: 0;
    }
  }

  /* --- Footer Area (Products) --- */
  &__footer {
    position: relative;
    z-index: 5;
  }

  &__section-label {
    font-size: 14px;
    font-weight: 700;
    color: #6e6e73;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-align: center;
    
    @media (min-width: 992px) {
      text-align: right;
    }
  }

  /* --- Modules --- */
  
  /* 1. Timer */
  .th-timer {
    display: flex;
    gap: 10px;
    justify-content: center;
    margin-bottom: 35px;

    @media (min-width: 992px) {
      justify-content: flex-start;
    }

    &__item {
      background: var(--th-bg-glass);
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      border: 1px solid rgba(255, 255, 255, 0.4);
      border-radius: var(--th-radius-sm);
      width: 70px;
      height: 80px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      transition: transform 0.3s;
      
      @media (min-width: 768px) {
        width: 75px; 
        height: 85px;
      }
    }

    &__value {
      font-size: 24px;
      font-weight: 800;
      color: #333;
      line-height: 1;

      @media (min-width: 768px) {
        font-size: 28px;
      }
    }

    &__label {
      font-size: 12px;
      color: #666;
      margin-top: 4px;
      font-weight: 500;
    }
  }

  /* 2. Products Container */
  .th-promo-products {
    display: flex;
    overflow-x: auto;
    gap: 15px;
    padding-bottom: 20px;
    
    /* Hide scrollbar */
    scrollbar-width: none;
    &::-webkit-scrollbar {
      display: none;
    }
    
    /* Snap Logic */
    scroll-snap-type: x mandatory;

    /* Desktop Grid */
    @media (min-width: 992px) {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      overflow-x: visible;
      padding-bottom: 10px;
    }

    /* 2.1 Scroll Indicator (Mobile Only) */
    &__scroll-indicator {
      display: block;
      width: 100px;
      height: 4px;
      background: rgba(0, 0, 0, 0.05);
      border-radius: 4px;
      margin: 0 auto;
      position: relative;
      overflow: hidden;

      @media (min-width: 992px) {
        display: none;
      }
    }

    &__scroll-thumb {
      position: absolute;
      top: 0;
      right: 0;
      height: 100%;
      width: 30%;
      background: var(--th-color-primary);
      border-radius: 4px;
      transition: transform 0.1s linear;
      will-change: transform;
    }
  }

  /* 3. Product Mini Card */
  .th-product-mini {
    flex: 0 0 auto;
    width: 220px; /* عرض ثابت للموبايل */
    scroll-snap-align: start;
    
    background: var(--th-bg-glass-card);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.5);
    border-radius: var(--th-radius-md);
    padding: 15px;
    display: flex;
    align-items: center;
    gap: 12px;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;

    @media (min-width: 992px) {
      width: auto; /* تلقائي في الجريد */
    }

    &:hover {
      background: #fff;
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);

      /* Trigger sub-elements hover effects */
      .th-product-mini__add-btn {
        opacity: 1;
        transform: translateX(0);
      }
      .th-product-mini__img {
        transform: scale(1.1);
      }
    }

    &__visual {
      width: 50px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    &__img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      transition: transform 0.3s;
    }

    &__details {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 4px;
      text-align: right;
    }

    &__title {
      font-size: 12px;
      font-weight: 700;
      color: #333;
      margin: 0;
      line-height: 1.3;
    }

    &__price {
      font-size: 13px;
      font-weight: 700;
      color: var(--th-color-primary);
    }

    &__add-btn {
      width: 26px;
      height: 26px;
      border-radius: 50%;
      background: var(--th-color-primary);
      color: #fff;
      border: none;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 12px;
      cursor: pointer;
      transition: all 0.3s ease;
      
      /* Mobile: Visible always, Desktop: Hidden until hover */
      opacity: 1;
      
      @media (min-width: 992px) {
        opacity: 0;
        transform: translateX(-10px);
      }
    }
  }

  /* --- Keyframes --- */
  @keyframes th-float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-12px); }
    100% { transform: translateY(0px); }
  }
}
</style>


<!-- ملاحظة: يفضل وضع السكريبت في ملف JS منفصل -->
<script>
    (function(){
        // منطق العداد
        var endDate = new Date(); 
        endDate.setDate(endDate.getDate() + 2);
        
        setInterval(function() {
            var now = new Date().getTime(); 
            var d = endDate - now;
            
            var elD = document.getElementById("th-dd");
            var elH = document.getElementById("th-hh");
            var elM = document.getElementById("th-mm");
            var elS = document.getElementById("th-ss");

            if(elD) elD.innerText = Math.floor(d / (86400000)) < 10 ? "0" + Math.floor(d / (86400000)) : Math.floor(d / (86400000));
            if(elH) elH.innerText = Math.floor((d % (86400000)) / (3600000)) < 10 ? "0" + Math.floor((d % (86400000)) / (3600000)) : Math.floor((d % (86400000)) / (3600000));
            if(elM) elM.innerText = Math.floor((d % (3600000)) / (60000)) < 10 ? "0" + Math.floor((d % (3600000)) / (60000)) : Math.floor((d % (3600000)) / (60000));
            if(elS) elS.innerText = Math.floor((d % (60000)) / 1000) < 10 ? "0" + Math.floor((d % (60000)) / 1000) : Math.floor((d % (60000)) / 1000);
        }, 1000);

        // منطق السكرول
        var prodContainer = document.getElementById('thPromoProductsContainer');
        var scrollThumb = document.getElementById('thScrollThumb');
        var track = document.querySelector('.th-promo-products__scroll-indicator');

        if(prodContainer && scrollThumb && track) {
            prodContainer.addEventListener('scroll', function() {
                var containerScrollWidth = prodContainer.scrollWidth - prodContainer.clientWidth;
                var scrollVal = Math.abs(prodContainer.scrollLeft);
                var maxTrackMovement = track.clientWidth - scrollThumb.clientWidth;
                var moveInPx = (scrollVal / containerScrollWidth) * maxTrackMovement;
                
                // التأكد من الاتجاه في RTL
                scrollThumb.style.transform = "translateX(-" + moveInPx + "px)";
            });
        }
    })();
</script>

