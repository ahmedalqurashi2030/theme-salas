{# ================================================
   Tharaa Theme – Promo Hero With Products
   Path: home.promo-hero-products
================================================ #}

{# قراءة الإعدادات من twilight.json #}
{% set title           = component.title           ?? 'عروض آبل الخارقة وصلت الآن.' %}
{% set description     = component.description     ?? 'احصل على خصومات فورية تصل إلى 20% عند شراء أجهزة مختارة.' %}
{% set hero_image      = component.hero_image      ?? 'https://i.ibb.co/68v8zN6/Apple-Set-Transparent.png' %}
{% set countdown_label = component.countdown_label ?? trans('components.promo_hero.countdown_label') %}
{% set countdown_end   = component.countdown_end   ?? '' %}
{% set show_countdown  = component.show_countdown  ?? false %}
{# ملاحظة: show_price في JSON لكن نستخدمه هنا كـ show_rating #}
{% set show_rating     = component.show_price      ?? true %}
{% set button_text     = component.button_text     ?? 'تصفح المجموعة كاملة' %}
{% set button_link     = component.button_link     ?? '#' %}
{% set products        = component.products        ?? [] %}

<section class="s-block th-hero-promo">
    {# نحصر الـ CSS داخل القسم حتى لا يؤثّر على بقية الثيم #}
    <style>
        .th-hero-promo {
            --th-primary: #0071e3;
            --th-text-main: #1d1d1f;
            --th-text-sub: #555555;
            --th-bg-gradient: linear-gradient(90deg, #eef5ff 0%, #fef2f4 100%);
            --th-glass-bg: rgba(255, 255, 255, 0.65);
            --th-glass-border: 1px solid rgba(255, 255, 255, 0.6);
            --th-radius-xl: 32px;
            --th-radius-md: 20px;
            --th-radius-sm: 16px;
            --th-shadow: 0 20px 60px rgba(0, 0, 0, 0.06);

            font-family: 'Tajawal', sans-serif;
            direction: rtl;
            text-align: right;
            padding: 40px 0;
            box-sizing: border-box;
        }

        .th-hero-promo * { box-sizing: border-box; }
        .th-hero-promo a { text-decoration: none; }

        /* الكارت الرئيسي */
        .th-hero-promo__card {
            background: var(--th-bg-gradient);
            border-radius: var(--th-radius-xl);
            padding: 48px 40px;
            box-shadow: var(--th-shadow);
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            gap: 44px;
        }

        .th-hero-promo__glow {
            position: absolute;
            width: 620px;
            height: 620px;
            background: radial-gradient(circle, rgba(255,255,255,0.7) 0%, transparent 70%);
            top: -15%;
            left: 55%;
            transform: translateX(-50%);
            z-index: 0;
            pointer-events: none;
        }

        /* هيدر (صورة + نص) */
        .th-hero-promo__header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 40px;
            position: relative;
            z-index: 2;
        }

        .th-content-col { flex: 1; }
        .th-visual-col {
            flex: 0 0 36%;
            max-width: 36%;
            display: flex;
            justify-content: flex-start;
        }

        .th-badge {
            display: inline-block;
            background: rgba(0, 113, 227, 0.08);
            color: var(--th-primary);
            padding: 6px 14px;
            border-radius: 999px;
            font-weight: 700;
            font-size: 13px;
            margin-bottom: 14px;
            border: 1px solid rgba(0, 113, 227, 0.18);
        }

        .th-title {
            font-size: 38px;
            font-weight: 900;
            color: var(--th-text-main);
            margin-bottom: 15px;
            line-height: 1.2;
        }

        .th-subtitle {
            font-size: 15px;
            color: var(--th-text-sub);
            margin-bottom: 24px;
            max-width: 90%;
            line-height: 1.7;
        }

        .th-countdown-label {
            font-size: 12px;
            color: #777;
            margin-bottom: 8px;
        }

        /* العد التنازلي */
        .th-timer {
            display: flex;
            gap: 10px;
            margin-bottom: 28px;
        }

        .th-timer__item {
            background: var(--th-glass-bg);
            backdrop-filter: blur(10px);
            border: var(--th-glass-border);
            border-radius: var(--th-radius-sm);
            width: 70px;
            height: 78px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .th-timer__val {
            font-size: 24px;
            font-weight: 800;
            color: #333;
            line-height: 1;
        }

        .th-timer__lbl {
            font-size: 11px;
            color: #666;
            margin-top: 3px;
        }

        /* الزر */
        .th-btn {
            background: var(--th-text-main);
            color: #fff !important;
            padding: 13px 32px;
            border-radius: 999px;
            font-weight: 700;
            font-size: 14px;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: 0.3s;
        }

        .th-btn:hover {
            background: var(--th-primary);
            transform: translateY(-3px);
        }

        /* صورة الهيرو */
        .th-main-img {
            width: 100%;
            height: auto;
            object-fit: contain;
            filter: drop-shadow(0 25px 50px rgba(0,0,0,0.18));
            animation: thFloatHero 6s ease-in-out infinite;
        }

        @keyframes thFloatHero {
            0% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0); }
        }

        /* الفوتر – المنتجات */
        .th-footer {
            position: relative;
            z-index: 2;
        }

        .th-label {
            font-size: 13px;
            font-weight: 700;
            color: #777;
            margin-bottom: 16px;
        }

        .th-products-list {
            display: grid;
            grid-template-columns: repeat(5, minmax(0, 1fr));
            gap: 16px;
        }

        /* كرت المنتج المخصص */
        .th-prod-card {
            background: rgba(255,255,255,0.55);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255,255,255,0.7);
            border-radius: var(--th-radius-md);
            padding: 14px 16px;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: 0.3s;
            cursor: pointer;
            min-height: 88px;
            text-decoration: none !important;
        }

        .th-prod-card:hover {
            background: #fff;
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.06);
        }

        .th-p-img {
            width: 45px;
            height: 45px;
            object-fit: contain;
            transition: 0.3s;
            flex-shrink: 0;
        }

        .th-prod-card:hover .th-p-img {
            transform: scale(1.06);
        }

        .th-p-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 3px;
            overflow: hidden;
        }

        .th-p-title {
            font-size: 11px;
            font-weight: 700;
            color: #333;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .th-p-price {
            font-size: 12px;
            font-weight: 800;
            color: var(--th-primary);
        }

        /* التقييم */
        .th-p-rating {
            display: flex;
            gap: 2px;
            font-size: 11px;
            margin-top: 3px;
        }

        .th-p-star {
            color: #d0d4dc;
        }

        .th-p-star.is-active {
            color: #ffb400;
        }

        /* زر الإضافة للسلة */
        .th-add-btn {
            width: 26px;
            height: 26px;
            border-radius: 50%;
            background: var(--th-primary);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 11px;
            border: none;
            opacity: 0;
            transition: 0.25s;
            cursor: pointer;
            flex-shrink: 0;
        }

        .th-prod-card:hover .th-add-btn {
            opacity: 1;
        }

        /* شريط التمرير للموبايل */
        .th-scroll-bar {
            display: none;
            width: 110px;
            height: 4px;
            background: rgba(0,0,0,0.05);
            border-radius: 999px;
            margin: 16px auto 0;
            position: relative;
            overflow: hidden;
        }

        .th-scroll-thumb {
            position: absolute;
            top: 0;
            right: 0;
            height: 100%;
            width: 35%;
            background: var(--th-primary);
            border-radius: 999px;
        }

        /* تجاوبية */
        @media (max-width: 992px) {
            .th-hero-promo__card {
                padding: 36px 20px;
                gap: 32px;
            }

            .th-hero-promo__header {
                flex-direction: column-reverse;
                text-align: center;
            }

            .th-visual-col {
                flex: unset;
                max-width: 80%;
                width: 100%;
                justify-content: center;
            }

            .th-title {
                font-size: 26px;
            }

            .th-subtitle {
                margin: 0 auto 22px;
            }

            .th-timer {
                justify-content: center;
            }

            .th-products-list {
                display: flex;
                overflow-x: auto;
                scroll-snap-type: x mandatory;
                padding-bottom: 8px;
                scrollbar-width: none;
            }

            .th-products-list::-webkit-scrollbar { display: none; }

            .th-prod-card {
                min-width: 210px;
                scroll-snap-align: start;
            }

            .th-add-btn {
                opacity: 1;
            }

            .th-scroll-bar {
                display: block;
            }
        }
    </style>

    <div class="container">
        <div class="th-hero-promo__card">
            <div class="th-hero-promo__glow"></div>

            {# ===== هيدر القسم ===== #}
            <header class="th-hero-promo__header">
                <div class="th-content-col">
                    <span class="th-badge">{{ trans('components.promo_hero.badge') }}</span>

                    {% if title %}
                        <h2 class="th-title">{{ title }}</h2>
                    {% endif %}

                    {% if description %}
                        <p class="th-subtitle">
                            {{ description|raw }}
                        </p>
                    {% endif %}

                    {% if show_countdown and countdown_end %}
                        <div class="th-countdown-label">
                            {{ countdown_label }}
                        </div>

                        <div class="th-timer" data-end="{{ countdown_end|e('html_attr') }}">
                            <div class="th-timer__item">
                                <span class="th-timer__val" data-part="seconds">00</span>
                                <span class="th-timer__lbl">{{ trans('components.promo_hero.seconds') }}</span>
                            </div>
                            <div class="th-timer__item">
                                <span class="th-timer__val" data-part="minutes">00</span>
                                <span class="th-timer__lbl">{{ trans('components.promo_hero.minutes') }}</span>
                            </div>
                            <div class="th-timer__item">
                                <span class="th-timer__val" data-part="hours">00</span>
                                <span class="th-timer__lbl">{{ trans('components.promo_hero.hours') }}</span>
                            </div>
                            <div class="th-timer__item">
                                <span class="th-timer__val" data-part="days">00</span>
                                <span class="th-timer__lbl">{{ trans('components.promo_hero.days') }}</span>
                            </div>
                        </div>
                    {% endif %}

                    {% if button_text and button_link %}
                        <a href="{{ button_link }}" class="th-btn">
                            {{ button_text }}
                        </a>
                    {% endif %}
                </div>

                <div class="th-visual-col">
                    {% if hero_image %}
                        <img src="{{ hero_image }}" alt="{{ title }}" class="th-main-img" loading="lazy">
                    {% endif %}
                </div>
            </header>

            {# ===== فوتر القسم: المنتجات ===== #}
            <footer class="th-footer">
                <h3 class="th-label">{{ trans('components.promo_hero.most_requested') }}</h3>

                <div class="th-products-list" id="thProductScroll">
                    {% for product in products %}
                        <a href="{{ product.url }}" class="th-prod-card" title="{{ product.name }}">
                            {# صورة المنتج #}
                            {% if product.image is defined %}
                                <img src="{{ product.image.url }}" alt="{{ product.image.alt ?? product.name }}" class="th-p-img" loading="lazy">
                            {% endif %}

                            <div class="th-p-info">
                                <span class="th-p-title">{{ product.name }}</span>

                                {% if show_rating %}
                                    {# نحاول قراءة قيمة التقييم إن كانت متوفرة #}
                                    {% set rating_value = product.rating is defined ? product.rating : 0 %}
                                    <div class="th-p-rating" aria-label="التقييم {{ rating_value }}/5">
                                        {% for i in 1..5 %}
                                            <span class="th-p-star{% if i <= rating_value %} is-active{% endif %}">★</span>
                                        {% endfor %}
                                    </div>
                                {% endif %}

                                {% if product.sale_price is defined %}
                                    <span class="th-p-price">
                                        {{ product.sale_price|money }}
                                    </span>
                                {% endif %}
                            </div>

                            <button
                                type="button"
                                class="th-add-btn"
                                data-product-id="{{ product.id }}"
                                aria-label="إضافة {{ product.name }} إلى السلة">
                                +
                            </button>
                        </a>
                    {% else %}
                        {# عرض منتجات وهمية للمعاينة في حال لم يختَر التاجر أي منتج #}
                        {% for i in 1..5 %}
                            <div class="th-prod-card">
                                <img src="https://via.placeholder.com/80x80?text=Product" class="th-p-img" alt="Product">
                                <div class="th-p-info">
                                    <span class="th-p-title">اسم المنتج التجريبي {{ i }}</span>
                                    {% if show_rating %}
                                        <div class="th-p-rating">
                                            {% for s in 1..5 %}
                                                <span class="th-p-star{% if s <= 4 %} is-active{% endif %}">★</span>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                    <span class="th-p-price">199 ر.س</span>
                                </div>
                                <button type="button" class="th-add-btn">+</button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>

                <div class="th-scroll-bar">
                    <div class="th-scroll-thumb" id="thScrollThumb"></div>
                </div>
            </footer>
        </div>
    </div>
</section>

<script>
    (function () {
        // ===== عدّاد الوقت =====
        var sections = document.querySelectorAll('.th-hero-promo');
        if (sections.length) {
            sections.forEach(function (section) {
                var timer = section.querySelector('.th-timer');
                if (!timer) return;

                var endStr = timer.getAttribute('data-end');
                if (!endStr) return;

                // بعض المتصفحات تحتاج صيغة ISO قياسية
                var endDate = new Date(endStr);
                if (isNaN(endDate.getTime())) {
                    // محاولة إصلاح بسيطة في حال تم تخزين القيمة بدون T
                    endDate = new Date(endStr.replace(' ', 'T'));
                }
                if (isNaN(endDate.getTime())) {
                    console.warn('Invalid countdown_end format:', endStr);
                    return;
                }

                function updateTimer() {
                    var now = Date.now();
                    var diff = endDate.getTime() - now;

                    var parts = {
                        days: '00',
                        hours: '00',
                        minutes: '00',
                        seconds: '00'
                    };

                    if (diff > 0) {
                        var dd = Math.floor(diff / 86400000);
                        var hh = Math.floor((diff % 86400000) / 3600000);
                        var mm = Math.floor((diff % 3600000) / 60000);
                        var ss = Math.floor((diff % 60000) / 1000);

                        parts.days    = (dd < 10 ? '0' : '') + dd;
                        parts.hours   = (hh < 10 ? '0' : '') + hh;
                        parts.minutes = (mm < 10 ? '0' : '') + mm;
                        parts.seconds = (ss < 10 ? '0' : '') + ss;
                    }

                    Object.keys(parts).forEach(function (key) {
                        var el = timer.querySelector('[data-part="' + key + '"]');
                        if (el) el.textContent = parts[key];
                    });
                }

                updateTimer();
                setInterval(updateTimer, 1000);
            });
        }

        // ===== إضافة المنتجات للسلة =====
        var addButtons = document.querySelectorAll('.th-hero-promo .th-add-btn[data-product-id]');
        if (addButtons.length) {
            addButtons.forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    var id = parseInt(this.getAttribute('data-product-id'), 10);
                    if (!id || !window.salla || !salla.cart || !salla.cart.addItem) {
                        console.warn('Salla cart API not ready');
                        return;
                    }

                    salla.cart.addItem({ product_id: id, quantity: 1 })
                        .then(function () {
                            if (salla.helpers && salla.helpers.modal && salla.helpers.modal.toast) {
                                salla.helpers.modal.toast(salla.lang.get('common.product_added_to_cart'));
                            }
                        })
                        .catch(function (err) {
                            console.error(err);
                        });
                });
            });
        }

        // ===== شريط التمرير للموبايل =====
        var scroller = document.getElementById('thProductScroll');
        var thumb = document.getElementById('thScrollThumb');
        var track = document.querySelector('.th-scroll-bar');

        if (scroller && thumb && track) {
            scroller.addEventListener('scroll', function () {
                var scrollW = scroller.scrollWidth - scroller.clientWidth;
                if (scrollW <= 0) return;

                var scrolled = Math.abs(scroller.scrollLeft);
                var trackW = track.clientWidth - thumb.clientWidth;
                var move = (scrolled / scrollW) * trackW;

                thumb.style.transform = 'translateX(-' + move + 'px)';
            });
        }
    })();
</script>
