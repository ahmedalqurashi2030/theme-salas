{# ================================================
   Tharaa Theme – Promo Hero With Products
   Path: home.promo-hero-products
   يعتمد على twilight.json الذي أرسلته (title, description, hero_image, products, show_countdown, show_price, countdown_end, button_*)
================================================ #}

{% set title           = component.title           ?? '' %}
{% set description     = component.description     ?? '' %}
{% set hero_image      = component.hero_image      ?? '' %}
{% set products        = component.products        ?? [] %}
{% set show_countdown  = component.show_countdown  ?? false %}
{% set show_price      = component.show_price      ?? true %}
{% set countdown_label = component.countdown_label ?? '' %}
{% set countdown_end   = component.countdown_end   ?? '' %}
{% set button_text     = component.button_text     ?? '' %}
{% set button_link     = component.button_link     ?? '' %}

<section class="s-block th-hero-promo">
    {# ملاحظة: في الإنتاج يفضّل نقل هذا الستايل إلى ملف SCSS وليس داخل التمبلت #}
    <style>
        .th-hero-promo {
            --th-primary: #0071e3;
            --th-text-main: #1d1d1f;
            --th-text-sub: #555555;
            --th-bg-gradient: linear-gradient(90deg, #feeef1 0%, #eef8ff 100%);
            --th-glass-bg: rgba(255, 255, 255, 0.65);
            --th-glass-border: 1px solid rgba(255, 255, 255, 0.6);
            --th-radius-xl: 32px;
            --th-radius-md: 20px;
            --th-radius-sm: 16px;
            --th-shadow: 0 20px 60px rgba(0, 0, 0, 0.06);
            font-family: 'Tajawal', sans-serif;
            direction: rtl;
            text-align: right;
            padding: 40px 0;
            box-sizing: border-box;
        }
        .th-hero-promo * { box-sizing: border-box; }
        .th-hero-promo a { text-decoration: none; }

        .th-hero-promo__card {
            background: var(--th-bg-gradient);
            border-radius: var(--th-radius-xl);
            padding: 50px;
            box-shadow: var(--th-shadow);
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            gap: 50px;
        }
        .th-hero-promo__glow {
            position: absolute;
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(255,255,255,0.6) 0%, transparent 70%);
            top: -10%;
            left: 50%;
            transform: translateX(-50%);
            z-index: 0;
            pointer-events: none;
        }

        .th-hero-promo__header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 40px;
            position: relative;
            z-index: 2;
        }
        .th-content-col { flex: 1; }
        .th-visual-col { flex: 0 0 35%; max-width: 35%; display: flex; justify-content: flex-end; }

        .th-badge {
            display: inline-block;
            background: rgba(0, 113, 227, 0.1);
            color: var(--th-primary);
            padding: 6px 14px;
            border-radius: 30px;
            font-weight: 700;
            font-size: 13px;
            margin-bottom: 15px;
            border: 1px solid rgba(0, 113, 227, 0.15);
        }
        .th-title {
            font-size: 40px;
            font-weight: 900;
            color: var(--th-text-main);
            margin-bottom: 15px;
            line-height: 1.2;
        }
        .th-subtitle {
            font-size: 16px;
            color: var(--th-text-sub);
            margin-bottom: 30px;
            max-width: 90%;
            line-height: 1.6;
        }

        .th-countdown-label {
            display: inline-block;
            font-size: 13px;
            color: #777;
            margin-bottom: 8px;
        }

        .th-timer {
            display: flex;
            gap: 10px;
            margin-bottom: 35px;
        }
        .th-timer__item {
            background: var(--th-glass-bg);
            backdrop-filter: blur(10px);
            border: var(--th-glass-border);
            border-radius: var(--th-radius-sm);
            width: 70px;
            height: 80px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .th-timer__val {
            font-size: 26px;
            font-weight: 800;
            color: #333;
            line-height: 1;
        }
        .th-timer__lbl {
            font-size: 12px;
            color: #666;
            margin-top: 4px;
        }

        .th-btn {
            background: var(--th-text-main);
            color: #fff !important;
            padding: 14px 35px;
            border-radius: 50px;
            font-weight: 700;
            font-size: 15px;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: 0.3s;
        }
        .th-btn:hover {
            background: var(--th-primary);
            transform: translateY(-3px);
        }

        .th-main-img {
            width: 100%;
            height: auto;
            object-fit: contain;
            filter: drop-shadow(0 25px 50px rgba(0,0,0,0.15));
            animation: thFloat 6s ease-in-out infinite;
        }

        .th-footer { position: relative; z-index: 2; }
        .th-label {
            font-size: 14px;
            font-weight: 700;
            color: #888;
            margin-bottom: 20px;
        }

        .th-products-list {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 15px;
        }

        .th-prod-card {
            background: rgba(255,255,255,0.5);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255,255,255,0.5);
            border-radius: var(--th-radius-md);
            padding: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: 0.3s;
            cursor: pointer;
            text-align: right;
            min-height: 90px;
            position: relative;
            text-decoration: none !important;
        }
        .th-prod-card:hover {
            background: #fff;
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
        }

        .th-p-img {
            width: 45px;
            height: 45px;
            object-fit: contain;
            transition: 0.3s;
        }
        .th-prod-card:hover .th-p-img { transform: scale(1.1); }

        .th-p-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 4px;
            overflow: hidden;
        }
        .th-p-title {
            font-size: 11px;
            font-weight: 700;
            color: #333;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .th-p-price {
            font-size: 12px;
            font-weight: 700;
            color: var(--th-primary);
        }

        .th-add-btn {
            width: 26px;
            height: 26px;
            border-radius: 50%;
            background: var(--th-primary);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 10px;
            border: none;
            opacity: 0;
            transition: 0.3s;
            cursor: pointer;
            z-index: 2;
        }
        .th-prod-card:hover .th-add-btn { opacity: 1; }

        .th-scroll-bar {
            display: none;
            width: 100px;
            height: 4px;
            background: rgba(0,0,0,0.05);
            border-radius: 4px;
            margin: 15px auto 0;
            position: relative;
            overflow: hidden;
        }
        .th-scroll-thumb {
            position: absolute;
            top: 0;
            right: 0;
            height: 100%;
            width: 30%;
            background: var(--th-primary);
            border-radius: 4px;
        }

        @keyframes thFloat {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-12px); }
            100% { transform: translateY(0px); }
        }

        @media (max-width: 992px) {
            .th-hero-promo__card {
                padding: 40px 20px;
                gap: 40px;
            }
            .th-hero-promo__header {
                flex-direction: column-reverse;
                text-align: center;
            }
            .th-content-col { width: 100%; }
            .th-visual-col { flex: unset; max-width: 80%; width: 100%; justify-content: center; }
            .th-title { font-size: 28px; }
            .th-subtitle { margin: 0 auto 30px; }
            .th-timer { justify-content: center; }
            .th-products-list {
                display: flex;
                overflow-x: auto;
                scroll-snap-type: x mandatory;
                padding-bottom: 10px;
                scrollbar-width: none;
            }
            .th-products-list::-webkit-scrollbar { display: none; }
            .th-prod-card { min-width: 210px; scroll-snap-align: start; }
            .th-add-btn { opacity: 1; }
            .th-scroll-bar { display: block; }
        }
    </style>

    <div class="container">
        <div class="th-hero-promo__card" data-th-promo>
            <div class="th-hero-promo__glow"></div>

            <header class="th-hero-promo__header">
                <div class="th-content-col">
                    <span class="th-badge">تصفية نهاية العام</span>

                    {% if title %}
                        <h2 class="th-title">{{ title }}</h2>
                    {% endif %}

                    {% if description %}
                        <p class="th-subtitle">{{ description|raw }}</p>
                    {% endif %}

                    {% if show_countdown and countdown_end %}
                        {% if countdown_label %}
                            <div class="th-countdown-label">{{ countdown_label }}</div>
                        {% endif %}
                        <div class="th-timer" data-end="{{ countdown_end }}">
                            <div class="th-timer__item">
                                <span class="th-timer__val" data-unit="days">00</span>
                                <span class="th-timer__lbl">يوم</span>
                            </div>
                            <div class="th-timer__item">
                                <span class="th-timer__val" data-unit="hours">00</span>
                                <span class="th-timer__lbl">ساعة</span>
                            </div>
                            <div class="th-timer__item">
                                <span class="th-timer__val" data-unit="minutes">00</span>
                                <span class="th-timer__lbl">دقيقة</span>
                            </div>
                            <div class="th-timer__item">
                                <span class="th-timer__val" data-unit="seconds">00</span>
                                <span class="th-timer__lbl">ثانية</span>
                            </div>
                        </div>
                    {% endif %}

                    {% if button_text and button_link %}
                        <a href="{{ button_link }}" class="th-btn">
                            {{ button_text }}
                        </a>
                    {% endif %}
                </div>

                <div class="th-visual-col">
                    {% if hero_image %}
                        <img src="{{ hero_image }}" alt="{{ title }}" class="th-main-img">
                    {% endif %}
                </div>
            </header>

            <footer class="th-footer">
                <h3 class="th-label">الأكثر طلباً هذا الأسبوع</h3>

                {% if products|length %}
                    <div class="th-products-list" data-th-products-list>
                        {% for product in products %}
                            <a href="{{ product.url }}"
                               class="th-prod-card"
                               title="{{ product.name }}"
                               data-product-id="{{ product.id }}">
                                {% if product.image %}
                                    <img src="{{ product.image.url }}"
                                         alt="{{ product.image.alt }}"
                                         class="th-p-img"
                                         loading="lazy">
                                {% endif %}

                                <div class="th-p-info">
                                    <span class="th-p-title">{{ product.name }}</span>

                                    {% if show_price %}
                                        <span class="th-p-price">
                                            {{ (product.sale_price ?? product.price)|money }}
                                        </span>
                                    {% endif %}
                                </div>

                                <button type="button" class="th-add-btn js-th-add-btn">
                                    +
                                </button>
                            </a>
                        {% endfor %}
                    </div>
                {% endif %}

                <div class="th-scroll-bar">
                    <div class="th-scroll-thumb"></div>
                </div>
            </footer>
        </div>
    </div>
</section>

<script>
    (function () {
        // كل قسم promo-hero في الصفحة يعالج لوحده
        document.querySelectorAll('[data-th-promo]').forEach(function (sectionEl) {

            // ====== 1) عدّ تنازلي لكل قسم ======
            var timerEl = sectionEl.querySelector('.th-timer[data-end]');
            if (timerEl) {
                var endDate = new Date(timerEl.getAttribute('data-end'));

                function updateTimer() {
                    var now = Date.now();
                    var diff = endDate - now;
                    if (diff <= 0) {
                        // انتهى
                        ['days','hours','minutes','seconds'].forEach(function (u) {
                            var el = timerEl.querySelector('[data-unit="' + u + '"]');
                            if (el) el.textContent = '00';
                        });
                        return;
                    }
                    var dd = Math.floor(diff / 86400000);
                    var hh = Math.floor((diff % 86400000) / 3600000);
                    var mm = Math.floor((diff % 3600000) / 60000);
                    var ss = Math.floor((diff % 60000) / 1000);

                    var map = {
                        days: dd,
                        hours: hh,
                        minutes: mm,
                        seconds: ss
                    };
                    Object.keys(map).forEach(function (unit) {
                        var el = timerEl.querySelector('[data-unit="' + unit + '"]');
                        if (!el) return;
                        var val = map[unit];
                        el.textContent = val < 10 ? '0' + val : String(val);
                    });
                }

                updateTimer();
                setInterval(updateTimer, 1000);
            }

            // ====== 2) إضافة للسلة ======
            sectionEl.querySelectorAll('.js-th-add-btn').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    var card = btn.closest('.th-prod-card');
                    if (!card) return;
                    var productId = card.getAttribute('data-product-id');
                    if (!productId || !window.salla || !salla.cart) return;

                    salla.cart.addItem({ product_id: parseInt(productId, 10), quantity: 1 })
                        .then(function () {
                            if (salla.helpers && salla.helpers.modal && salla.helpers.modal.toast) {
                                salla.helpers.modal.toast('تمت إضافة المنتج إلى السلة');
                            }
                        })
                        .catch(function () { /* ممكن تضيف معالجة خطأ لاحقًا */ });
                });
            });

            // ====== 3) شريط التمرير في الجوال ======
            var scroller = sectionEl.querySelector('[data-th-products-list]');
            var track    = sectionEl.querySelector('.th-scroll-bar');
            var thumb    = sectionEl.querySelector('.th-scroll-thumb');

            if (scroller && track && thumb) {
                scroller.addEventListener('scroll', function () {
                    var scrollW = scroller.scrollWidth - scroller.clientWidth;
                    if (scrollW <= 0) return;
                    var scrolled = Math.abs(scroller.scrollLeft);
                    var trackW = track.clientWidth - thumb.clientWidth;
                    var move = (scrolled / scrollW) * trackW;
                    thumb.style.transform = 'translateX(-' + move + 'px)';
                });
            }
        });
    })();
</script>
