{# =====================================================
   Tharaa Theme – Promo Hero With Products
   Path: home.promo-hero-products
   يعتمد على twilight.json الذي أرسلته (بدون أي تعديل)
===================================================== #}

{# 1) قراءة الإعدادات من سلة #}
{% set title           = component.title           ?? 'عروض آبل الخارقة وصلت الآن.' %}
{% set description     = component.description     ?? 'احصل على خصومات فورية تصل إلى 20% عند شراء أجهزة مختارة.' %}
{% set hero_image      = component.hero_image      ?? '' %}
{% set countdown_label = component.countdown_label ?? '' %}
{% set countdown_end   = component.countdown_end   ?? '' %}
{% set show_countdown  = component.show_countdown  ?? false %}
{# ملاحظة: حاليًا id في twilight.json هو show_price لكن اللابل "إظهار التقييم"
   لذلك نستخدمه هنا كـ show_rating #}
{% set show_rating     = component.show_price      ?? true %}
{% set button_text     = component.button_text     ?? '' %}
{% set button_link     = component.button_link     ?? '' %}
{% set products        = component.products        ?? [] %}

<section class="s-block th-hero-promo">
    {# CSS خاص بالقسم – كله داخل نطاق th-hero-promo حتى لا يؤثر على بقية الثيم #}
    <style>
        .th-hero-promo {
            --th-primary: #0071e3;
            --th-text-main: #1d1d1f;
            --th-text-sub: #555555;
            --th-bg-gradient: linear-gradient(90deg, #feeef1 0%, #eef8ff 100%);
            --th-glass-bg: rgba(255, 255, 255, 0.65);
            --th-glass-border: 1px solid rgba(255, 255, 255, 0.6);
            --th-radius-xl: 32px;
            --th-radius-md: 20px;
            --th-radius-sm: 16px;
            --th-shadow: 0 20px 60px rgba(0, 0, 0, 0.06);

            font-family: 'Tajawal', sans-serif;
            direction: rtl;
            text-align: right;
            padding: 40px 0;
            box-sizing: border-box;
        }

        .th-hero-promo * {
            box-sizing: border-box;
        }

        .th-hero-promo a {
            text-decoration: none;
        }

        /* بطاقة الخلفية الرئيسية */
        .th-hero-promo__card {
            background: var(--th-bg-gradient);
            border-radius: var(--th-radius-xl);
            padding: 50px;
            box-shadow: var(--th-shadow);
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            gap: 50px;
        }

        .th-hero-promo__glow {
            position: absolute;
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(255,255,255,0.6) 0%, transparent 70%);
            top: -10%;
            left: 50%;
            transform: translateX(-50%);
            z-index: 0;
            pointer-events: none;
        }

        /* رأس القسم */
        .th-hero-promo__header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 40px;
            position: relative;
            z-index: 2;
        }

        .th-content-col {
            flex: 1;
        }

        .th-visual-col {
            flex: 0 0 35%;
            max-width: 35%;
            display: flex;
            justify-content: flex-end;
        }

        .th-badge {
            display: inline-block;
            background: rgba(0, 113, 227, 0.08);
            color: var(--th-primary);
            padding: 6px 14px;
            border-radius: 999px;
            font-weight: 700;
            font-size: 13px;
            margin-bottom: 15px;
            border: 1px solid rgba(0, 113, 227, 0.15);
        }

        .th-title {
            font-size: 40px;
            font-weight: 900;
            color: var(--th-text-main);
            margin-bottom: 15px;
            line-height: 1.2;
        }

        .th-subtitle {
            font-size: 16px;
            color: var(--th-text-sub);
            margin-bottom: 25px;
            max-width: 90%;
            line-height: 1.7;
        }

        /* العد التنازلي */
        .th-countdown {
            margin-bottom: 30px;
        }

        .th-countdown__label {
            display: inline-block;
            margin-bottom: 10px;
            font-size: 13px;
            color: #777;
        }

        .th-timer {
            display: flex;
            gap: 10px;
        }

        .th-timer__item {
            background: var(--th-glass-bg);
            backdrop-filter: blur(10px);
            border: var(--th-glass-border);
            border-radius: var(--th-radius-sm);
            width: 70px;
            height: 80px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .th-timer__val {
            font-size: 26px;
            font-weight: 800;
            color: #333;
            line-height: 1;
        }

        .th-timer__lbl {
            font-size: 12px;
            color: #666;
            margin-top: 4px;
        }

        /* زر الدعوة لاتخاذ إجراء */
        .th-btn {
            background: var(--th-text-main);
            color: #fff !important;
            padding: 14px 35px;
            border-radius: 50px;
            font-weight: 700;
            font-size: 15px;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: 0.3s ease;
        }

        .th-btn:hover {
            background: var(--th-primary);
            transform: translateY(-3px);
        }

        /* صورة الهيرو */
        .th-main-img {
            width: 100%;
            height: auto;
            object-fit: contain;
            filter: drop-shadow(0 25px 50px rgba(0,0,0,0.15));
            animation: thFloat 6s ease-in-out infinite;
        }

        /* الفوتر / قائمة المنتجات */
        .th-footer {
            position: relative;
            z-index: 2;
        }

        .th-label {
            font-size: 14px;
            font-weight: 700;
            color: #888;
            margin-bottom: 20px;
        }

        .th-products-list {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 15px;
        }

        .th-prod-card {
            background: rgba(255,255,255,0.7);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255,255,255,0.8);
            border-radius: var(--th-radius-md);
            padding: 14px 16px;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: 0.25s ease;
            cursor: pointer;
            text-align: right;
            min-height: 90px;
            position: relative;
        }

        .th-prod-card:hover {
            background: #fff;
            transform: translateY(-4px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.05);
        }

        .th-p-img {
            width: 45px;
            height: 45px;
            object-fit: contain;
            flex-shrink: 0;
            transition: 0.25s ease;
        }

        .th-prod-card:hover .th-p-img {
            transform: scale(1.05);
        }

        .th-p-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 4px;
            overflow: hidden;
        }

        .th-p-title {
            font-size: 11px;
            font-weight: 700;
            color: #333;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .th-p-meta {
            display: flex;
            flex-direction: column;
            gap: 4px;
            align-items: flex-start;
        }

        .th-p-price {
            font-size: 12px;
            font-weight: 800;
            color: var(--th-primary);
        }

        .th-p-rating {
            display: flex;
            align-items: center;
        }

        /* زر الإضافة للسلة – نستخدم Web Component الرسمي */
        salla-add-product-button.th-add-btn {
            position: absolute;
            left: 14px;
            bottom: 14px;
        }

        /* شريط التمرير في الجوال */
        .th-scroll-bar {
            display: none;
            width: 120px;
            height: 4px;
            background: rgba(0,0,0,0.05);
            border-radius: 4px;
            margin: 16px auto 0;
            position: relative;
            overflow: hidden;
        }

        .th-scroll-thumb {
            position: absolute;
            top: 0;
            right: 0;
            height: 100%;
            width: 30%;
            background: var(--th-primary);
            border-radius: 4px;
        }

        @keyframes thFloat {
            0%   { transform: translateY(0); }
            50%  { transform: translateY(-12px); }
            100% { transform: translateY(0); }
        }

        /* Responsiveness */
        @media (max-width: 992px) {
            .th-hero-promo__card {
                padding: 32px 18px;
                gap: 32px;
            }

            .th-hero-promo__header {
                flex-direction: column-reverse;
                text-align: center;
            }

            .th-content-col {
                width: 100%;
            }

            .th-visual-col {
                flex: unset;
                max-width: 80%;
                width: 100%;
                justify-content: center;
            }

            .th-title {
                font-size: 28px;
            }

            .th-subtitle {
                margin: 0 auto 25px;
            }

            .th-countdown {
                display: inline-block;
            }

            .th-timer {
                justify-content: center;
            }

            .th-products-list {
                display: flex;
                overflow-x: auto;
                scroll-snap-type: x mandatory;
                padding-bottom: 10px;
                scrollbar-width: none;
            }

            .th-products-list::-webkit-scrollbar {
                display: none;
            }

            .th-prod-card {
                min-width: 210px;
                scroll-snap-align: start;
            }

            .th-scroll-bar {
                display: block;
            }
        }
    </style>

    <div class="container">
        <div class="th-hero-promo__card">
            <div class="th-hero-promo__glow"></div>

            {# ======= HEADER (نص + صورة) ======= #}
            <header class="th-hero-promo__header">
                <div class="th-content-col">
                    <span class="th-badge">تصفية نهاية العام</span>

                    {% if title %}
                        <h2 class="th-title">{{ title }}</h2>
                    {% endif %}

                    {% if description %}
                        <p class="th-subtitle">
                            {{ description|raw }}
                        </p>
                    {% endif %}

                    {% if show_countdown and countdown_end %}
                        <div class="th-countdown" data-countdown-end="{{ countdown_end }}">
                            {% if countdown_label %}
                                <span class="th-countdown__label">
                                    {{ countdown_label }}
                                </span>
                            {% endif %}

                            <div class="th-timer">
                                <div class="th-timer__item">
                                    <span class="th-timer__val" data-unit="days">00</span>
                                    <span class="th-timer__lbl">يوم</span>
                                </div>
                                <div class="th-timer__item">
                                    <span class="th-timer__val" data-unit="hours">00</span>
                                    <span class="th-timer__lbl">ساعة</span>
                                </div>
                                <div class="th-timer__item">
                                    <span class="th-timer__val" data-unit="minutes">00</span>
                                    <span class="th-timer__lbl">دقيقة</span>
                                </div>
                                <div class="th-timer__item">
                                    <span class="th-timer__val" data-unit="seconds">00</span>
                                    <span class="th-timer__lbl">ثانية</span>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    {% if button_text and button_link %}
                        <a href="{{ button_link }}" class="th-btn">
                            {{ button_text }}
                        </a>
                    {% endif %}
                </div>

                <div class="th-visual-col">
                    {% if hero_image %}
                        <img src="{{ hero_image }}" alt="{{ title }}" class="th-main-img" loading="lazy">
                    {% endif %}
                </div>
            </header>

            {# ======= FOOTER (قائمة المنتجات) ======= #}
            <footer class="th-footer">
                <h3 class="th-label">الأكثر طلباً هذا الأسبوع</h3>

                <div class="th-products-list" id="thProductScroll">
                    {% for product in products %}
                        <article class="th-prod-card">
                            <a href="{{ product.url }}" class="th-p-info-wrapper">
                                <img src="{{ product.image.url }}" alt="{{ product.image.alt ?? product.name }}" class="th-p-img" loading="lazy">

                                <div class="th-p-info">
                                    <span class="th-p-title">{{ product.name }}</span>

                                    <div class="th-p-meta">
                                        {% if show_rating %}
                                            <div class="th-p-rating">
                                                {# نحاول دعم أكثر من شكل لبيانات التقييم حسب بنية المنتج #}
                                                <salla-rating-stars
                                                    size="mini"
                                                    value="{{ product.rating.value ?? product.rating ?? 0 }}"
                                                    reviews="{{ product.rating.count ?? product.reviews_count ?? 0 }}">
                                                </salla-rating-stars>
                                            </div>
                                        {% endif %}

                                        <span class="th-p-price">
                                            {{ product.sale_price is defined and product.sale_price
                                                ? product.sale_price|money
                                                : product.price|money }}
                                        </span>
                                    </div>
                                </div>
                            </a>

                            {# زر إضافة للسلة باستخدام Web Component الرسمي #}
                            <salla-add-product-button
                                class="th-add-btn"
                                product-id="{{ product.id }}">
                                <i class="fa-solid fa-plus"></i>
                            </salla-add-product-button>
                        </article>
                    {% else %}
                        {# عرض كروت تجريبية لو ما في منتجات مختارة – فقط للمعاينة في متجر الاختبار #}
                        <article class="th-prod-card">
                            <img src="https://assets.stickpng.com/images/580b57fcd9996e24bc43c51f.png" class="th-p-img" alt="">
                            <div class="th-p-info">
                                <span class="th-p-title">iPad Mini 6</span>
                                <div class="th-p-meta">
                                    <span class="th-p-price">2,499 ر.س</span>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                </div>

                <div class="th-scroll-bar">
                    <div class="th-scroll-thumb"></div>
                </div>
            </footer>
        </div>
    </div>
</section>

{# =============== JS: عدّ تنازلي + شريط تمرير للجوال =============== #}
<script>
(function () {
    var sections = document.querySelectorAll('.th-hero-promo');

    sections.forEach(function (section) {
        // ----- العد التنازلي -----
        var countdown = section.querySelector('[data-countdown-end]');
        if (countdown) {
            var end = countdown.getAttribute('data-countdown-end');
            var endDate = end ? new Date(end) : null;

            if (endDate && !isNaN(endDate.getTime())) {
                var daysEl    = countdown.querySelector('[data-unit="days"]');
                var hoursEl   = countdown.querySelector('[data-unit="hours"]');
                var minutesEl = countdown.querySelector('[data-unit="minutes"]');
                var secondsEl = countdown.querySelector('[data-unit="seconds"]');

                var pad = function (n) { return n < 10 ? '0' + n : '' + n; };

                var tick = function () {
                    var now = Date.now();
                    var diff = endDate.getTime() - now;

                    if (diff <= 0) {
                        daysEl    && (daysEl.textContent    = '00');
                        hoursEl   && (hoursEl.textContent   = '00');
                        minutesEl && (minutesEl.textContent = '00');
                        secondsEl && (secondsEl.textContent = '00');
                        return;
                    }

                    var dd = Math.floor(diff / 86400000);
                    var hh = Math.floor((diff % 86400000) / 3600000);
                    var mm = Math.floor((diff % 3600000) / 60000);
                    var ss = Math.floor((diff % 60000) / 1000);

                    daysEl    && (daysEl.textContent    = pad(dd));
                    hoursEl   && (hoursEl.textContent   = pad(hh));
                    minutesEl && (minutesEl.textContent = pad(mm));
                    secondsEl && (secondsEl.textContent = pad(ss));
                };

                tick();
                setInterval(tick, 1000);
            }
        }

        // ----- شريط تمرير للمنتجات في الجوال -----
        var scroller = section.querySelector('.th-products-list');
        var track    = section.querySelector('.th-scroll-bar');
        var thumb    = section.querySelector('.th-scroll-thumb');

        if (scroller && track && thumb) {
            scroller.addEventListener('scroll', function () {
                var scrollW = scroller.scrollWidth - scroller.clientWidth;
                if (scrollW <= 0) {
                    thumb.style.transform = 'translateX(0)';
                    return;
                }

                var scrolled = Math.abs(scroller.scrollLeft);
                var trackW   = track.clientWidth - thumb.clientWidth;
                var move     = (scrolled / scrollW) * trackW;

                // للـ RTL نستخدم -move
                thumb.style.transform = 'translateX(' + (-move) + 'px)';
            });
        }
    });
})();
</script>
