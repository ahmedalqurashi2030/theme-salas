"{# ================================================
   Tharaa Theme – Promo Hero With Products
   Path: home.promo-hero-products
================================================ #}

{# قراءة الإعدادات من twilight.json #}
{% set title           = component.title           ?? 'عروض آبل الخارقة وصلت الآن.' %}
{% set description     = component.description     ?? 'احصل على خصومات فورية تصل إلى 20% عند شراء أجهزة مختارة.' %}
{% set hero_image      = component.hero_image      ?? 'https://i.ibb.co/68v8zN6/Apple-Set-Transparent.png' %}
{% set countdown_label = component.countdown_label ?? trans('components.promo_hero.countdown_label') %}
{% set countdown_end   = component.countdown_end   ?? '' %}
{% set show_countdown  = component.show_countdown  ?? false %}
{# ملاحظة: show_price في JSON لكن نستخدمه هنا كـ show_rating #}
{% set show_rating     = component.show_price      ?? true %}
{% set button_text     = component.button_text     ?? 'تصفح المجموعة كاملة' %}
{% set button_link     = component.button_link     ?? '#' %}
{% set products        = component.products        ?? [] %}

<section class="s-block th-hero-promo">
    {# نحصر الـ CSS داخل القسم حتى لا يؤثّر على بقية الثيم #}
    <style>
        .th-hero-promo {
            background: #fff; /* Fallback */
            background-image: 
                radial-gradient(at 0% 0%, hsla(213,63%,90%,1) 0, transparent 50%), 
                radial-gradient(at 100% 0%, hsla(340,100%,94%,1) 0, transparent 50%), 
                radial-gradient(at 100% 100%, hsla(213,63%,90%,1) 0, transparent 50%), 
                radial-gradient(at 0% 100%, hsla(340,100%,94%,1) 0, transparent 50%);
            border-radius: 8px;




            --th-primary: #0071e3;
            --th-primary-dark: #005bb5;
            --th-text-main: #1d1d1f;
            --th-text-sub: #424245; /* Darker grey for better readability */
            --th-bg-gradient: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); /* Richer base gradient */
            --th-glass-bg: rgba(255, 255, 255, 0.75); /* More opaque for legibility */
            --th-glass-border: 1px solid rgba(255, 255, 255, 0.8);
            --th-radius-xl: 36px;
            --th-radius-md: 24px;
            --th-radius-sm: 18px;
            --th-shadow-lg: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
            --th-shadow-card: 0 8px 20px rgba(0, 0, 0, 0.04);
            
            font-family: 'Tajawal', sans-serif;
            direction: rtl;
            text-align: right;
            padding: 30px 0; /* Reduced padding */
            box-sizing: border-box;
        }

        .th-hero-promo * { box-sizing: border-box; }
        .th-hero-promo a { text-decoration: none; }

        /* الكارت الرئيسي */
        .th-hero-promo__card {

            padding: 60px 50px;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            gap: 50px;
        }

        .th-hero-promo__glow {
            position: absolute;
            width: 800px;
            height: 800px;
            background: radial-gradient(circle, rgba(255, 255, 255, 1) 0%, rgba(255,255,255,0) 70%);
            top: -200px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 0;
            pointer-events: none;
            opacity: 0.6;
            filter: blur(40px);
        }

        /* هيدر (صورة + نص) */
        .th-hero-promo__header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 40px;
            position: relative;
            z-index: 2;
        }

        .th-content-col { flex: 1; }
        .th-visual-col {
           
            display: flex;
            justify-content: flex-start;
        }

        .th-badge {
            display: inline-flex;
            align-items: center;
            background: #fff;
            color: var(--th-primary);
            padding: 8px 18px;
            border-radius: 999px;
            font-weight: 800;
            font-size: 13px;
            margin-bottom: 20px;
            box-shadow: 0 4px 12px rgba(0, 113, 227, 0.1);
            letter-spacing: 0.5px;
        }

        .th-title {
            font-size: 48px;
            font-weight: 900;
            color: var(--th-text-main);
            margin-bottom: 18px;
            line-height: 1.1;
            letter-spacing: -0.02em;
        }

        .th-subtitle {
            font-size: 18px;
            color: var(--th-text-sub);
            margin-bottom: 30px;
            max-width: 85%;
            line-height: 1.6;
            font-weight: 500;
        }

        .th-countdown-label {
            font-size: 13px;
            font-weight: 700;
            color: #888;
            margin-bottom: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* العد التنازلي */
        .th-timer {
            display: flex;
            gap: 12px;
        }

        .th-timer__item {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(0, 0, 0, 0.05);
            border-radius: var(--th-radius-sm);
            width: 76px;
            height: 84px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-shadow: var(--th-shadow-card);
            transition: transform 0.3s ease;
        }
        
        .th-timer__item:hover {
            transform: translateY(-3px);
        }

        .th-timer__val {
            font-size: 28px;
            font-weight: 800;
            color: var(--th-text-main);
            line-height: 1;
            font-family: inherit; /* Arabic nums usually ok, or use 'Inter' for English nums */
        }

        .th-timer__lbl {
            font-size: 11px;
            color: #666;
            margin-top: 1px;
        }

        /* الزر */
        .th-btn {
            background: var(--th-text-main);
            color: #fff !important;
            padding: 16px 42px;
            border-radius: 999px;
            font-weight: 700;
            font-size: 16px;
            display: inline-flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s cubic-bezier(0.25, 1, 0.5, 1);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

        .th-btn:hover {
            background: #000;
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }

        /* صورة الهيرو */
        .th-main-img {
            width: auto; /* Changed from 100% to auto to respect max-height */
            max-width: 100%;
            height: auto;
            max-height: 350px; /* Limit height on desktop */
            object-fit: contain;
            filter: drop-shadow(0 25px 50px rgba(0,0,0,0.18));
            animation: thFloatHero 6s ease-in-out infinite;
        }

        @keyframes thFloatHero {
            0% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0); }
        }

        /* الفوتر – المنتجات */
        .th-footer {
            position: relative;
            z-index: 2;
        }

        .th-label {
            font-size: 13px;
            font-weight: 700;
            color: #777;
            margin-bottom: 16px;
        }

        .th-products-list {
            display: grid;
            grid-template-columns: repeat(5, minmax(0, 1fr));
            gap: 16px;
        }

        /* كرت المنتج المخصص */
        .th-prod-card {
            background: rgba(255, 255, 255, 0.6);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.8);
            border-radius: 6px;
            padding: 4px;
            display: flex;
            align-items: center;
            gap: 6px;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            cursor: pointer;
            min-height: 96px;
            text-decoration: none !important;
            box-shadow: var(--th-shadow-card);
        }

        .th-prod-card:hover {
            background: rgba(255, 255, 255, 0.95);
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
            border-color: #fff;
            z-index: 5;
        }

        .th-p-img {
            width: 56px;
            height: 56px;
            object-fit: contain;
            transition: transform 0.5s ease;
            filter: drop-shadow(0 4px 6px rgba(0,0,0,0.05));
        }

        .th-prod-card:hover .th-p-img {
            transform: scale(1.15) rotate(5deg);
        }

        .th-p-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 3px;
            overflow: hidden;
        }

        .th-p-title {
            font-size: 13px;
            font-weight: 700;
            color: #222;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            margin-bottom: 2px;
        }

        .th-p-price {
            font-size: 14px;
            font-weight: 800;
            color: var(--th-primary);
            letter-spacing: -0.5px;
        }

        /* التقييم */
        .th-p-rating {
            display: flex;
            gap: 2px;
            font-size: 11px;
            margin-top: 3px;
        }

        .th-p-star {
            color: #d0d4dc;
        }

        .th-p-star.is-active {
            color: #ffb400;
        }

        /* زر الإضافة للسلة (Salla Component) */
        salla-add-product-button.th-add-btn {
            width: 32px;
            height: 32px;
            transition: 0.3s;
            cursor: pointer;
            flex-shrink: 0;
            transform: translateX(15px);
        }

        /* ستايل الزر الداخلي في Shadow DOM */
        salla-add-product-button.th-add-btn::part(button) {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: var(--th-text-main);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px; /* حجم الخط لعلامة + */
            border: none;
            padding: 0;
            line-height: 1;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            transition: all 0.3s;
        }
        
        salla-add-product-button.th-add-btn::part(button):hover {
            background: var(--th-primary);
            transform: scale(1.1);
        }

        .th-prod-card:hover salla-add-product-button.th-add-btn {
            opacity: 1;
            transform: translateX(0);
        }

        /* شريط التمرير للموبايل */
        .th-scroll-bar {
            display: none;
            width: 110px;
            height: 4px;
            background: rgba(0,0,0,0.05);
            border-radius: 999px;
            margin: 16px auto 0;
            position: relative;
            overflow: hidden;
        }

        .th-scroll-thumb {
            position: absolute;
            top: 0;
            right: 0;
            height: 100%;
            width: 35%;
            background: var(--th-primary);
            border-radius: 999px;
        }

        /* تجاوبية */
        @media (max-width: 992px) {
            .th-hero-promo__card {
                padding: 36px 20px;
                gap: 32px;
            }

            .th-hero-promo__header {
                flex-direction: column-reverse;
            }

            .th-visual-col {
                flex: unset;
                max-width: 60%; /* Reduced for mobile */
                width: 100%;
                justify-content: center;
                margin-bottom: 20px;
            }

            .th-main-img {
                max-height: 220px; /* Limit height on mobile */
            }

            .th-title {
                font-size: 26px;
            }

           

           
            .th-products-list {
                display: flex;
                overflow-x: auto;
                scroll-snap-type: x mandatory;
                padding-bottom: 8px;
                scrollbar-width: none;
            }

            .th-products-list::-webkit-scrollbar { display: none; }

            .th-prod-card {
                min-width: 210px;
                scroll-snap-align: start;
            }

            salla-add-product-button.th-add-btn {
                opacity: 1;
            }

            .th-scroll-bar {
                display: block;
            }
        }
    </style>

    <div class="container">
        <div class="th-hero-promo__card">
            <div class="th-hero-promo__glow"></div>

            {# ===== هيدر القسم ===== #}
            <header class="th-hero-promo__header">
                <div class="th-content-col">

                    {% if title %}
                        <h2 class="th-title">{{ title }}</h2>
                    {% endif %}

                    {% if description %}
                        <p class="th-subtitle">
                            {{ description|raw }}
                        </p>
                    {% endif %}

                    {% if show_countdown and countdown_end %}
                        <div class="th-countdown-label">
                            {{ countdown_label }}
                        </div>

                        <div class="th-timer" data-end="{{ countdown_end|e('html_attr') }}">
                            <div class="th-timer__item">
                                <span class="th-timer__val" data-part="seconds">00</span>
                                <span class="th-timer__lbl">{{ trans('components.promo_hero.seconds') }}</span>
                            </div>
                            <div class="th-timer__item">
                                <span class="th-timer__val" data-part="minutes">00</span>
                                <span class="th-timer__lbl">{{ trans('components.promo_hero.minutes') }}</span>
                            </div>
                            <div class="th-timer__item">
                                <span class="th-timer__val" data-part="hours">00</span>
                                <span class="th-timer__lbl">{{ trans('components.promo_hero.hours') }}</span>
                            </div>
                            <div class="th-timer__item">
                                <span class="th-timer__val" data-part="days">00</span>
                                <span class="th-timer__lbl">{{ trans('components.promo_hero.days') }}</span>
                            </div>
                        </div>
                    {% endif %}

                    {% if button_text and button_link %}
                        <a href="{{ button_link }}" class="th-btn">
                            {{ button_text }}
                        </a>
                    {% endif %}
                </div>

                <div class="th-visual-col">
                    {% if hero_image %}
                        <img src="{{ hero_image }}" alt="{{ title }}" class="th-main-img" loading="lazy">
                    {% endif %}
                </div>
            </header>

            {# ===== فوتر القسم: المنتجات ===== #}
            <footer class="th-footer">

                <div class="th-products-list" id="thProductScroll">
                    {% for product in products %}
                        <a href="{{ product.url }}" class="th-prod-card" title="{{ product.name }}">
                            {# صورة المنتج #}
                            {% if product.image is defined %}
                                <img src="{{ product.image.url }}" alt="{{ product.image.alt ?? product.name }}" class="th-p-img" loading="lazy">
                            {% endif %}

                            <div class="th-p-info">
                                <span class="th-p-title">{{ product.name }}</span>

                                {% if show_rating %}
                                    {# 
                                       =======================================================
                                       [وضع التصميم] تقييم وهمي 5 نجوم
                                       لحذف هذا التقييم واستخدام التقييم الحقيقي عند النشر:
                                       1. احذف السطر {% set rating_value = 5 %}
                                       2. ألغِ تعليق السطر الذي يليه (الخاص بـ product.rating)
                                       =======================================================
                                    #}
                                    {% set rating_value = 5 %}
                                    {# {% set rating_value = product.rating is defined ? product.rating : 0 %} #}

                                    <div class="th-p-rating" aria-label="التقييم {{ rating_value }}/5">
                                        {% for i in 1..5 %}
                                            <span class="th-p-star{% if i <= rating_value %} is-active{% endif %}">★</span>
                                        {% endfor %}
                                    </div>
                                {% endif %}

                                {% if product.sale_price is defined %}
                                    <span class="th-p-price">
                                        {{ product.sale_price|money }}
                                    </span>
                                {% endif %}
                            </div>

                            <salla-add-product-button
                                class="th-add-btn"
                                product-id="{{ product.id }}"
                                product-status="{{ product.status }}"
                                product-type="{{ product.type }}"
                                aria-label="إضافة {{ product.name }} إلى السلة">
                                +
                            </salla-add-product-button>
                        </a>
                    {% else %}
                        {# عرض منتجات وهمية للمعاينة في حال لم يختَر التاجر أي منتج #}
                        {% for i in 1..5 %}
                            <div class="th-prod-card">
                                <img src="https://via.placeholder.com/80x80?text=Product" class="th-p-img" alt="Product">
                                <div class="th-p-info">
                                    <span class="th-p-title">اسم المنتج التجريبي {{ i }}</span>
                                    {% if show_rating %}
                                        <div class="th-p-rating">
                                            {% for s in 1..5 %}
                                                <span class="th-p-star{% if s <= 4 %} is-active{% endif %}">★</span>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                    <span class="th-p-price">199 ر.س</span>
                                </div>
                                <salla-add-product-button class="th-add-btn">+</salla-add-product-button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>

                <div class="th-scroll-bar">
                    <div class="th-scroll-thumb" id="thScrollThumb"></div>
                </div>
            </footer>
        </div>
    </div>
</section>

<script>
    (function () {
        // ===== عدّاد الوقت =====
        var sections = document.querySelectorAll('.th-hero-promo');
        if (sections.length) {
            sections.forEach(function (section) {
                var timer = section.querySelector('.th-timer');
                if (!timer) return;

                var endStr = timer.getAttribute('data-end');
                if (!endStr) return;

                // بعض المتصفحات تحتاج صيغة ISO قياسية
                var endDate = new Date(endStr);
                if (isNaN(endDate.getTime())) {
                    // محاولة إصلاح بسيطة في حال تم تخزين القيمة بدون T
                    endDate = new Date(endStr.replace(' ', 'T'));
                }
                if (isNaN(endDate.getTime())) {
                    console.warn('Invalid countdown_end format:', endStr);
                    return;
                }

                var intervalId = setInterval(updateTimer, 1000);
                updateTimer();

                function updateTimer() {
                    var now = Date.now();
                    var diff = endDate.getTime() - now;

                    if (diff <= 0) {
                        timer.innerHTML = '<div style="grid-column:1/-1; text-align:center; color:var(--th-primary); font-weight:bold; width:100%;">انتهى العرض</div>';
                        clearInterval(intervalId);
                        return;
                    }

                    var parts = {
                        days: '00',
                        hours: '00',
                        minutes: '00',
                        seconds: '00'
                    };

                    var dd = Math.floor(diff / 86400000);
                    var hh = Math.floor((diff % 86400000) / 3600000);
                    var mm = Math.floor((diff % 3600000) / 60000);
                    var ss = Math.floor((diff % 60000) / 1000);

                    parts.days    = (dd < 10 ? '0' : '') + dd;
                    parts.hours   = (hh < 10 ? '0' : '') + hh;
                    parts.minutes = (mm < 10 ? '0' : '') + mm;
                    parts.seconds = (ss < 10 ? '0' : '') + ss;

                    Object.keys(parts).forEach(function (key) {
                        var el = timer.querySelector('[data-part="' + key + '"]');
                        if (el) el.textContent = parts[key];
                    });
                }
            });
        }

        // ===== إضافة المنتجات للسلة (تم استبداله بمكون سلة القياسي) =====

        // ===== شريط التمرير للموبايل =====
        var scroller = document.getElementById('thProductScroll');
        var thumb = document.getElementById('thScrollThumb');
        var track = document.querySelector('.th-scroll-bar');

        if (scroller && thumb && track) {
            scroller.addEventListener('scroll', function () {
                var scrollW = scroller.scrollWidth - scroller.clientWidth;
                if (scrollW <= 0) return;

                var scrolled = Math.abs(scroller.scrollLeft);
                var trackW = track.clientWidth - thumb.clientWidth;
                var move = (scrolled / scrollW) * trackW;

                thumb.style.transform = 'translateX(-' + move + 'px)';
            });
        }
    })();
</script>
