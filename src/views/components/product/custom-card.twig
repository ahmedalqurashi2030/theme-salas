{# src/views/components/product/custom-card.twig #}

<div
	class="group relative bg-white rounded-lg border border-gray-100 hover:shadow-md transition-all duration-300 h-full flex flex-col">

	{# 1. صورة المنتج مع رابط #}
	<a
		href="{{ product.url }}" class="block relative w-full aspect-[4/5] overflow-hidden rounded-t-lg bg-gray-50">

		{# الشارات (خصم / نفدت الكمية) #}
		{% if product.promotion_title %}
			<span class="absolute top-2 right-2 z-10 bg-red-500 text-white text-[10px] font-bold px-2 py-1 rounded-sm">
				{{ product.promotion_title }}
			</span>
		{% endif %}

		<img
		src="{{ product.image.url }}" alt="{{ product.image.alt }}" loading="lazy" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">

		{# زر المفضلة (يظهر عند التحويم في الكمبيوتر) #}
		<salla-button shape="icon" fill="outline" color="light" onclick="salla.wishlist.toggle({{ product.id }})" class="absolute top-2 left-2 z-10 opacity-0 group-hover:opacity-100 transition-opacity btn--wishlist" data-id="{{ product.id }}">
			<i class="sicon-heart"></i>
		</salla-button>
	</a>

	{# 2. تفاصيل المنتج #}
	<div
		class="p-3 flex flex-col flex-1">
		{# العنوان #}
		<h3 class="text-sm text-gray-700 font-medium mb-1 line-clamp-2 min-h-[40px]">
			<a href="{{ product.url }}">{{ product.name }}</a>
		</h3>

		{# السعر #}
		<div class="mt-auto flex items-center justify-between gap-2">
			<div class="flex flex-col">
				{% if product.is_on_sale %}
					<span class="text-xs text-gray-400 line-through">{{ product.regular_price|money }}</span>
				{% endif %}
				<span class="text-sm font-bold text-primary">{{ product.price|money }}</span>
			</div>

			{# زر الإضافة للسلة (مهم جداً) #}
			{# نستخدم مكون سلة للحفاظ على ميزة AJAX #}
			<salla-add-product-button fill="outline" size="small" width="wide" product-id="{{ product.id }}" product-status="{{ product.status }}" product-type="{{ product.type }}" {{ theme.settings.show_cart_quantity_and_currency ? 'show-price' : '' }} class="!p-2 !w-8 !h-8 flex items-center justify-center rounded-full border-gray-200 text-primary hover:bg-primary hover:text-white">
				<i class="sicon-shopping-bag text-lg"></i>
			</salla-add-product-button>
		</div>
	</div>
</div>
