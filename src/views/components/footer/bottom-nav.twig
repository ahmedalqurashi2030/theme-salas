{% if theme.settings.get('show_bottom_nav') %}
	<div class="tharaa-bottom-nav">
		<a href="{{ link('/') }}" class="nav-item {{ page.slug == 'home' ? 'active' : '' }}">
			<i class="sicon-home"></i>
			<span>{{ trans('blocks.footer.home') }}</span>
		</a>

		<a href="{{ link('/categories') }}" class="nav-item">
			<i class="sicon-layout-grid"></i>
			<span>{{ trans('blocks.footer.categories') }}</span>
		</a>

		{# الزر العائم المميز في الوسط #}
		<div class="nav-item fab-item" onclick="salla.event.dispatch('search::open')">
			<div class="fab-circle">
				<i class="sicon-search"></i>
			</div>
		</div>

		<a href="{{ link('/cart') }}" class="nav-item cart-trigger">
			<div class="relative">
				<i class="sicon-shopping-bag"></i>
				<span class="badge-count">{{ cart.items_count }}</span>
			</div>
			<span>{{ trans('blocks.header.cart') }}</span>
		</a>

		<a href="{{ link('/profile') }}" class="nav-item">
			<i class="sicon-user"></i>
			<span>{{ trans('blocks.footer.my_account') }}</span>
		</a>
	</div>
{% endif %}
