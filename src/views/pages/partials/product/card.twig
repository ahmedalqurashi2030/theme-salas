====================================
#}

{% set cardData = {
  id: product.id,
  name: product.name,
  url: product.url,
  image: product.image,
  price: product.price,
  sale_price: product.sale_price,
  regular_price: product.regular_price,
  is_on_sale: product.is_on_sale,
  rating: product.rating,
  status: product.status,
  type: product.type
} %}

{% set attributes = [] %}

{% if is_horizontal %}
  {% set attributes = attributes|merge(['horizontal']) %}
{% endif %}

{% if is_special %}
  {% set attributes = attributes|merge(['special']) %}
{% endif %}

{% if not hide_add_btn %}
  {% set attributes = attributes|merge(['showAddButton']) %}
{% endif %}

{% if show_quantity %}
  {% set attributes = attributes|merge(['showQuantity']) %}
{% endif %}

{% set attributes = attributes|merge(['shadowOnHover']) %}

<custom-salla-product-card
  product='{{ cardData|json_encode|e("html_attr") }}'
  {{ attributes|join(' ')|raw }}>
</custom-salla-product-card>