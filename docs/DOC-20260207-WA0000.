      :root {
        --tharaa-primary: {{ theme.settings.get('primary_color', '#1a1a1a') }};
        --tharaa-secondary: {{ theme.settings.get('secondary_color', '#d4af37') }};
        --tharaa-font-body: {{ theme.settings.get('font_body', 'Almarai') }};
      }
    </style>
    
