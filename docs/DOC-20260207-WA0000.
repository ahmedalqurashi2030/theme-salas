    {% include 'components.home.testimonials' %}
  </section>

{% endblock %}

{% block scripts %}
  <script defer src="{{ 'home.js' | asset }}"></script>
{% endblock %}
```

### âš™ï¸ 3. JavaScript Scope (Ø¨Ø¯ÙˆÙ† ÙƒØ³Ø± ÙˆØ¸Ø§Ø¦Ù Ø³Ù„Ø©)

#### **Ø§Ù„Ù‚ÙˆØ§Ø¹Ø¯ Ø§Ù„Ø°Ù‡Ø¨ÙŠØ©:**

```javascript
// ğŸ“ src/assets/js/app.js

// ===================================
// âœ… DO: Ø§Ø³ØªØ®Ø¯Ù… Salla SDK Events
// ===================================

// Ø§Ù„Ø§Ø³ØªÙ…Ø§Ø¹ Ù„Ø¥Ø¶Ø§ÙØ© Ù…Ù†ØªØ¬ Ù„Ù„Ø³Ù„Ø©
salla.cart.event.onItemAdded((response) => {
  console.log('ØªÙ… Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ù…Ù†ØªØ¬:', response);
  
  // Ø£Ø¶Ù ØªØ£Ø«ÙŠØ± Tharaa Ø§Ù„Ø®Ø§Øµ
  showTharaaCartNotification(response.item);
});

// Ø§Ù„Ø§Ø³ØªÙ…Ø§Ø¹ Ù„ØªØ­Ø¯ÙŠØ« Ø§Ù„ÙƒÙ…ÙŠØ©
salla.cart.event.onItemUpdated((response) => {
  console.log('ØªÙ… ØªØ­Ø¯ÙŠØ« Ø§Ù„ÙƒÙ…ÙŠØ©:', response);
});

// ===================================
// âœ… DO: ØªØ­Ø³ÙŠÙ† Ø§Ù„ØªØ¬Ø±Ø¨Ø© Ø¨Ø¯ÙˆÙ† ØªØ¹Ø§Ø±Ø¶
// ===================================

function initTharaaEnhancements() {
  // Ø¥Ø¶Ø§ÙØ© smooth scroll
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });
  
  // Ø¥Ø¶Ø§ÙØ© lazy loading Ù„Ù„ØµÙˆØ±
  if ('IntersectionObserver' in window) {
    const imageObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const img = entry.target;
          img.src = img.dataset.src;
          img.classList.add('loaded');
          imageObserver.unobserve(img);
        }
      });
    });
    
    document.querySelectorAll('img[data-src]').forEach(img => {
      imageObserver.observe(img);
    });
  }
}

// ===================================
// âŒ DON'T: Ù„Ø§ ØªØ¹Ø¯Ù‘Ù„ Ø¹Ù„Ù‰ Cart form Ù…Ø¨Ø§Ø´Ø±Ø©
// ===================================

// âŒ Ø®Ø·Ø£ - Ø³ÙŠÙƒØ³Ø± ÙˆØ¸Ø§Ø¦Ù Ø³Ù„Ø©
document.querySelector('.cart-form').addEventListener('submit', (e) => {
  e.preventDefault(); // Ù„Ø§ ØªÙØ¹Ù„ Ù‡Ø°Ø§!
  // ... custom logic
});

// âœ… ØµØ­ÙŠØ­ - Ø§Ø³ØªØ®Ø¯Ù… events Ù…Ù† Salla
salla.cart.event.onUpdated(() => {
  // custom logic Ù‡Ù†Ø§
});

// ===================================
// âœ… DO: Ø§Ø³ØªØ®Ø¯Ù… Namespacing
// ===================================

const Tharaa = {
  animations: {
    fadeIn(element) {
      element.style.opacity = '0';
      element.style.transition = 'opacity 0.4s ease';
      setTimeout(() => element.style.opacity = '1', 10);
    }
  },
  
  cart: {
    showNotification(item) {
      // custom notification
    }
  },
  
  init() {
    initTharaaEnhancements();
    this.animations.init();
  }
};

// Initialize on DOM ready
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', () => Tharaa.init());
} else {
  Tharaa.init();
}
```

