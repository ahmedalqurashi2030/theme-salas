  'white': #ffffff,
  'gray-50': #fafafa,
  'gray-100': #f5f5f5,
  'gray-200': #e5e5e5,
  'gray-300': #d4d4d4,
  'gray-400': #a3a3a3,
  'gray-500': #737373,
  'gray-600': #525252,
  'gray-700': #404040,
  'gray-800': #262626,
  'gray-900': #171717,
  'black': #000000,
);

// Typography Scale
$tharaa-typography: (
  // Font Families
  'font-primary': ('Almarai', -apple-system, BlinkMacSystemFont, sans-serif),
  'font-heading': ('Playfair Display', Georgia, serif),
  'font-accent': ('Libre Baskerville', 'Times New Roman', serif),
  'font-mono': ('IBM Plex Mono', 'Courier New', monospace),
  
  // Font Sizes - Modular Scale (1.250 - Major Third)
  'text-2xs': 0.64rem,   // 10.24px
  'text-xs': 0.8rem,     // 12.8px
  'text-sm': 0.875rem,   // 14px
  'text-base': 1rem,     // 16px
  'text-lg': 1.125rem,   // 18px
  'text-xl': 1.25rem,    // 20px
  'text-2xl': 1.563rem,  // 25px
  'text-3xl': 1.953rem,  // 31.25px
  'text-4xl': 2.441rem,  // 39px
  'text-5xl': 3.052rem,  // 48.8px
  'text-6xl': 3.815rem,  // 61px
  
  // Line Heights
  'leading-tight': 1.25,
  'leading-snug': 1.375,
  'leading-normal': 1.5,
  'leading-relaxed': 1.625,
  'leading-loose': 2,
  
  // Letter Spacing
  'tracking-tighter': -0.05em,
  'tracking-tight': -0.025em,
  'tracking-normal': 0,
  'tracking-wide': 0.025em,
  'tracking-wider': 0.05em,
  'tracking-widest': 0.1em,
);

// Spacing Scale - Based on 4px (0.25rem)
$tharaa-spacing: (
  '0': 0,
  '1': 0.25rem,   // 4px
  '2': 0.5rem,    // 8px
  '3': 0.75rem,   // 12px
  '4': 1rem,      // 16px
  '5': 1.25rem,   // 20px
  '6': 1.5rem,    // 24px
  '8': 2rem,      // 32px
  '10': 2.5rem,   // 40px
  '12': 3rem,     // 48px
  '16': 4rem,     // 64px
  '20': 5rem,     // 80px
  '24': 6rem,     // 96px
  '32': 8rem,     // 128px
  '40': 10rem,    // 160px
  '48': 12rem,    // 192px
  '56': 14rem,    // 224px
  '64': 16rem,    // 256px
);

// Shadows - Luxury Elevation
$tharaa-shadows: (
  'sm': 0 1px 2px rgba(0, 0, 0, 0.04),
  'DEFAULT': 0 1px 3px rgba(0, 0, 0, 0.05),
  'md': 0 4px 6px rgba(0, 0, 0, 0.05),
  'lg': 0 10px 15px rgba(0, 0, 0, 0.08),
  'xl': 0 20px 25px rgba(0, 0, 0, 0.1),
  '2xl': 0 25px 50px rgba(0, 0, 0, 0.12),
  'inner': inset 0 2px 4px rgba(0, 0, 0, 0.06),
  'gold': 0 4px 14px rgba(212, 175, 55, 0.25),
);

// Border Radius
$tharaa-radius: (
  'none': 0,
  'sm': 0.25rem,    // 4px
  'DEFAULT': 0.5rem, // 8px
  'md': 0.75rem,    // 12px
  'lg': 1rem,       // 16px
  'xl': 1.5rem,     // 24px
  '2xl': 2rem,      // 32px
  'full': 9999px,
);

// Transitions
$tharaa-transitions: (
  'fast': 150ms cubic-bezier(0.4, 0, 0.2, 1),
  'base': 250ms cubic-bezier(0.4, 0, 0.2, 1),
  'slow': 400ms cubic-bezier(0.4, 0, 0.2, 1),
  'bounce': 500ms cubic-bezier(0.68, -0.55, 0.265, 1.55),
);

// Z-index Scale
$tharaa-z-index: (
  'dropdown': 1000,
  'sticky': 1020,
  'fixed': 1030,
  'modal-backdrop': 1040,
  'modal': 1050,
  'popover': 1060,
  'tooltip': 1070,
);

// Helper function Ù„Ù„ÙˆØµÙˆÙ„ Ù„Ù„Ù‚ÙŠÙ…
@function tharaa-color($key) {
  @return map-get($tharaa-colors, $key);
}

@function tharaa-space($key) {
  @return map-get($tharaa-spacing, $key);
}

@function tharaa-shadow($key) {
  @return map-get($tharaa-shadows, $key);
}
```

### ğŸ¯ ØªØ·Ø¨ÙŠÙ‚ Ø§Ù„Ù‡ÙˆÙŠØ© - Product Card Example

```twig
{# ğŸ“ src/views/components/product/card.twig #}

