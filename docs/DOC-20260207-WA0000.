    {% include 'components.home.featured-categories' %}
  </section>
  
  {# Section 3: Salla Pre-defined Components #}
  {% component 'home' %}
  {# Ù‡Ø°Ø§ Ø³ÙŠØ¹Ø±Ø¶ Ø¬Ù…ÙŠØ¹ Ø§Ù„Ù€ Features Ø§Ù„Ù…ÙØ¹Ù„Ø© ÙÙŠ twilight.json #}
  
